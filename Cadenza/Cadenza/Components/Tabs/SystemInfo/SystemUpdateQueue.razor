@inherits SystemUpdateQueueBase

<WhipSystemTable Items="@Items"
                 Filter="@FilterFunc"
                 Title="File Updates Queue">
    <HeaderContent>
        <MudTh>Type</MudTh>
        <MudTh>Item</MudTh>
        <MudTh>Property</MudTh>
        <MudTh>Current</MudTh>
        <MudTh>Update</MudTh>
        <MudTh></MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            @context.Update.ItemType
        </MudTd>
        <MudTd>
            @context.Update.Item
        </MudTd>
        <MudTd>
            @context.Update.Property
        </MudTd>
        <MudTd>
            @context.Update.OriginalValue
        </MudTd>
        <MudTd>
            @context.Update.UpdatedValue
        </MudTd>
        <MudTd>
            @if (context.NumberOfFailedAttempts > 0)
            {
                <MudIconButton Variant="Variant.Outlined"
                               Color="@Color.Error"
                               Icon="@Icons.Material.Filled.Error"
                               Size="@Size.Small"></MudIconButton>
            }
        </MudTd>
        <MudTd>
            <MudIconButton OnClick="@(() => Remove(context))"
                           Variant="Variant.Outlined"
                           Color="@Color.Default"
                           Icon="@Icons.Material.Filled.Delete"
                           Size="@Size.Small"></MudIconButton>
        </MudTd>
    </RowTemplate>
</WhipSystemTable>
