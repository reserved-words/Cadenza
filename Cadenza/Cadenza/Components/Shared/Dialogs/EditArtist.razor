@inherits EditArtistBase

<WhipDialog Cancel="Cancel"
            Submit="Submit">

    <ChildContent>
        <EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Name"
                                  ReadOnly="true"
                                  Disabled="true"
                                  @bind-Value="Model.Name" />
                    <MudSelect Label="Grouping"
                               @bind-Value="Model.Grouping"
                               For="@(() => Model.Grouping)">
                        @foreach (var type in Enum.GetValues<Grouping>())
                        {
                            <MudSelectItem Value="@type">@type.GetDisplayName()</MudSelectItem>
                        }
                    </MudSelect>
                    <MudTextField MaxLength="50"
                                  Label="Genre"
                                  @bind-Value="Model.Genre"
                                  For="@(() => Model.Genre)" />
                    <MudTextField MaxLength="50"
                                  Label="City"
                                  @bind-Value="Model.City"
                                  For="@(() => Model.City)" />
                    <MudTextField MaxLength="50"
                                  Label="State"
                                  @bind-Value="Model.State"
                                  For="@(() => Model.State)" />
                    <MudTextField MaxLength="50"
                                  Label="Country"
                                  @bind-Value="Model.Country"
                                  For="@(() => Model.Country)" />
                </MudCardContent>
            </MudCard>
        </EditForm>
    </ChildContent>

</WhipDialog>

@code {
    bool success;

    private void OnValidSubmit(EditContext context)
    {
        success = true;
        StateHasChanged();
    }
}