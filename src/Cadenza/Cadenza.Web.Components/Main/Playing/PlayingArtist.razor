@inherits ArtistViewBase

<ItemCard Type="@PlayerItemType.Artist" 
          Tags="@Model.Tags">
    <ChildContent>
        <MudGrid>
            <MudItem xs="6">
                <ArtistImageView Model="@Model" />
            </MudItem>
            <MudItem xs="6">
                <ItemCardTitle Itemtype="@PlayerItemType.Artist" Id="@Model.Id" Name="@Model.Name" />   
                <MudText Typo="Typo.body1">@Model.Location()</MudText>
                <GroupingLink Typo="@Typo.body2" Grouping="@Model.Grouping" />
                <GenreLink Typo="@Typo.body2" Genre="@Model.Genre" />
            </MudItem>
        </MudGrid>
    </ChildContent>
</ItemCard>

@code {
    [Parameter] public Breakpoint Breakpoint { get; set; }

    private bool ShowHeader => Breakpoint != Breakpoint.Xs;
}