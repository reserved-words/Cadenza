@inherits PlayShortcutsBase

<MudButton Class="mt-2" 
           OnClick="@PlayLibrary" 
           FullWidth="true" 
           Variant="@Variant.Filled">
    Play All
</MudButton>

<PlayShortcutsMenu Label="Play Grouping">
    @foreach (var grouping in Groupings)
    {
        <MudMenuItem OnClick="@(() => PlayGrouping(grouping))" Icon="@PlayerItemType.Grouping.GetIcon()">@grouping.Name</MudMenuItem>
    }
</PlayShortcutsMenu>

