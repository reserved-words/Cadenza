
<AppTable T="@PlayerItemVM"
          Items="@Items"
          Filter="@OnFilter"
          RowsPerPage="15">
    <RowTemplate>
        <TagResultRowTemplate Model="@context" OnViewItem="@OnViewItem" />
    </RowTemplate>
    <PagerContent >
        <MudTablePager HideRowsPerPage="true" />
    </PagerContent>
</AppTable>

@code {
    [Parameter] public List<PlayerItemVM>Items { get; set; }
    [Parameter] public Action<PlayerItemVM>OnViewItem { get; set; }
    [Parameter] public Func<PlayerItemVM, bool> OnFilter { get; set; }
}
