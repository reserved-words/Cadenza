
<AppTable T="@TaggedItemVM"
          Items="@Items"
          Filter="@OnFilter"
          RowsPerPage="15">
    <RowTemplate>
        <TagResultRowTemplate Model="@context" OnViewItem="@OnViewItem" />
    </RowTemplate>
    <PagerContent >
        <MudTablePager HideRowsPerPage="true" />
    </PagerContent>
</AppTable>

@code {
    [Parameter] public IReadOnlyCollection<TaggedItemVM> Items { get; set; }
    [Parameter] public Action<TaggedItemVM> OnViewItem { get; set; }
    [Parameter] public Func<TaggedItemVM, bool> OnFilter { get; set; }
}
