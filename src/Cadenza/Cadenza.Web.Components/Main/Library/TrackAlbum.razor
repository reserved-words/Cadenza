@using Cadenza.Web.Common.Extensions
@using Cadenza.Common.Domain.Extensions

@inherits AlbumViewBase

<ItemCard Type="@PlayerItemType.Album" 
          Heading="Album" 
          Tags="@Model.Tags" 
          ShowHeader="@ShowHeader" 
          Breakpoint="@Breakpoint">
    <ChildContent>
        <MudGrid>
            <MudItem xs="6" md="12">
                <AlbumArtworkView Model="@Model" />
            </MudItem>
            <MudItem xs="6" md="12">
                <AlbumLink Typo="@Typo.h6" Id="@Model.Id" Title="@Model.Title" />
                <ArtistLink Typo="Typo.body1" Id="@Model.ArtistId" Name="@Model.ArtistName" />
                <MudText Typo="@Typo.body1">@Model.ReleaseType.GetDisplayName()</MudText>
                <MudText Typo="@Typo.body1">@Model.Year</MudText>
                <MudText Typo="@Typo.body1">@Model.DiscPosition(AlbumTrack)</MudText>
                <MudText Typo="@Typo.body1">@Model.TrackPosition(AlbumTrack)</MudText>
            </MudItem>
        </MudGrid>
    </ChildContent>
</ItemCard>

@code {
    [Parameter] public AlbumTrackLinkVM AlbumTrack { get; set; }
    [Parameter] public Breakpoint Breakpoint { get; set; }

    private bool ShowHeader => Breakpoint != Breakpoint.Xs;
}