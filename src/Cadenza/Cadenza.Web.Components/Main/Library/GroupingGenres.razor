
<AppCardScrollContainer>
    <ChildContent>
        <AppTable T="@string"
                  Items="@Genres">
            <RowTemplate>
                <MudTd>
                    <GenreLink Typo="@Typo.body1" Genre="@context" GroupingId="@GroupingId" />
                </MudTd>
            </RowTemplate>
        </AppTable>
    </ChildContent>
</AppCardScrollContainer>

@code {
    [Parameter] public int GroupingId { get; set; }
    [Parameter] public IReadOnlyCollection<string> Genres { get; set; }
}
