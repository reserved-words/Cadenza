@inherits EditArtistReleasesBase

@if (Model != null)
{
    <AppTable Items="@Model">
        <RowTemplate>
            <MudTd>
                <MudTextField MaxLength="500"
                              @bind-Value="context.Title"
                              For="@(() => context.Title)" />
            </MudTd>
            <MudTd>
                <MudSelect @bind-Value="context.ReleaseType"
                           For="@(() => context.ReleaseType)">
                    @foreach (var releaseType in ReleaseTypes)
                    {
                        <MudSelectItem Value="@releaseType">@releaseType.GetDisplayName()</MudSelectItem>
                    }
                </MudSelect>
            </MudTd>
            <MudTd>
                <MudTextField MaxLength="4"
                              @bind-Value="context.Year"
                              For="@(() => context.Year)"
                              Mask="@(new PatternMask("0000"))" />
            </MudTd>
        </RowTemplate>
    </AppTable>
}