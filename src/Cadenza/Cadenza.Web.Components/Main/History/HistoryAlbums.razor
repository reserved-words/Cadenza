@inherits HistoryAlbumsBase

<HistoryCard Title="Top Albums"
             IsLoading="@IsLoading"
             LoadingCaption="Loading top albums..."
             Items="@Items"
             Period="@Period"
             UpdateItems="@UpdateItems">
    <RowTemplate>
        <MudTd Class="td-img">
            <img src="@context.ImageUrl" width="45" height="45"><img>
        </MudTd>
        <MudTd Class="td-int">
            @context.Rank
        </MudTd>
        <MudTd>
            <AlbumLink Typo="@Typo.body1" Id="@context.Id" Title="@context.Title" />
            <MudText Typo="@Typo.body2">@context.Artist</MudText>
        </MudTd>
        <MudTd Class="td-int">
            @context.Plays
        </MudTd>
    </RowTemplate>         
</HistoryCard>
