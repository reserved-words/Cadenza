@inherits HistoryTracksBase

<HistoryCard Title="Top Tracks"
             IsLoading="@IsLoading"
             LoadingCaption="Loading top tracks..."
             Items="@Items"
             Period="@Period"
             UpdateItems="@UpdateItems">
    <RowTemplate>
        <MudTd Class="td-int">
            @context.Rank
        </MudTd>
        <MudTd>
            <TrackLink Typo="@Typo.body1" Id="@context.Id" Title="@context.Title" />
            <MudText Typo="@Typo.body2">@context.Artist</MudText>
        </MudTd>
        <MudTd Class="td-int">
            @context.Plays
        </MudTd>
    </RowTemplate>
</HistoryCard>
