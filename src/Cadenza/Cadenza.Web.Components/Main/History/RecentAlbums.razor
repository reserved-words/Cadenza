@inherits RecentAlbumsBase

<HistoryCard Title="Recent Albums"
             IsLoading="@IsLoading"
             LoadingCaption="Loading recent albums..."
             ShowPeriodOption="false">

    <MudGrid Spacing="1" Justify="Justify.FlexStart">
        @foreach (var album in RecentAlbums){
        <MudItem xs="3">
            <RecentAlbumView Model="@album" />
        </MudItem>
        }
    </MudGrid>

</HistoryCard>