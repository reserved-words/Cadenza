
<AppCardHeader>

    <MainContent>
        <MudText Typo="@Typo.h6">@Title</MudText>
        @if (ShowPeriodOption)
        {
            <MudText Typo="@Typo.body1">@Period.GetDisplayName()</MudText>
        }
    </MainContent>

    <MenuContent>
        @if (ShowPeriodOption)
        {
            <MudMenu Icon="@Icons.Material.Filled.Settings"
                     Class="mt-auto"
                     Size="@Size.Medium"
                     AnchorOrigin="@Origin.TopLeft"
                     TransformOrigin="@Origin.BottomRight">
                @foreach (var period in Enum.GetValues<HistoryPeriod>())
                {
                    <MudMenuItem OnClick="@(() => OnUpdate(period))">@period.GetDisplayName()</MudMenuItem>
                }
            </MudMenu>
        }
    </MenuContent>

</AppCardHeader>

@typeparam T

@code {
    [Parameter] public HistoryPeriod Period { get; set; }

    [Parameter] public string Title { get; set; }

    [Parameter] public bool ShowPeriodOption { get; set; } = true;

    [Parameter] public Action<HistoryPeriod> OnUpdate { get; set; }
}
