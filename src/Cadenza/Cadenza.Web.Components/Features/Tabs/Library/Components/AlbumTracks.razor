@if (Album.Discs != null)
{
    <AppCardScrollContainer Elevation="0">
        <ChildContent>

            @if (Album.Discs.Count == 1)
            {
                <AlbumDisc Model="@Album.Discs.Single()" AlbumId="@Album.Id" AlbumArtistId="@Album.Artist.Id" />
            }
            else
            {
                <MudTabs ActivePanelIndex="@ActivePanelIndex">
                    @foreach (var disc in Album.Discs)
                    {
                        <MudTabPanel Text="@("Disc " + disc.DiscNo)">
                            <AlbumDisc Model="@disc" AlbumId="@Album.Id" AlbumArtistId="@Album.Artist.Id" />
                        </MudTabPanel>
                    }
                </MudTabs>
            }

        </ChildContent>
    </AppCardScrollContainer>
}

@code {
    [Parameter] public AlbumFullVM Album { get; set; }

    private int ActivePanelIndex { get; set; }

    protected override void OnParametersSet()
    {
        ActivePanelIndex = 0;
    }
}
