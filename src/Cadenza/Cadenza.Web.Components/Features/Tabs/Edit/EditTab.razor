@using Cadenza.Web.Components.Features.Tabs.Edit.Components

@inherits EditTabBase

@if (CurrentItem != null)
{

    <TabGrid>

        <TabGridColumn>
            <TabGridRow RowHeight="@RowHeight.Stretch">

                @if (CurrentItem.Value.Type == LibraryItemType.Album)
                {
                    <EditAlbumTab />
                }
                else if (CurrentItem.Value.Type == LibraryItemType.Artist)
                {
                    <EditArtistTab />
                }
                else if (CurrentItem.Value.Type == LibraryItemType.Track)
                {
                    <EditTrackTab />
                }

            </TabGridRow>

            <TabGridRow RowHeight="@RowHeight.Fixed">

                <MudContainer Class="d-flex justify-center flex-grow-1 gap-2">
                    <MudButton OnClick="@Remove" Variant="@Variant.Outlined" Color="@Color.Primary">@RemoveCaption</MudButton>
                    <MudButton OnClick="@Save" Variant="@Variant.Outlined" Color="@Color.Secondary">@SaveCaption</MudButton>
                    <MudButton OnClick="@Cancel" Variant="@Variant.Outlined" Color="@Color.Default">@CancelCaption</MudButton>
                </MudContainer>

            </TabGridRow>
        </TabGridColumn>

    </TabGrid>

}