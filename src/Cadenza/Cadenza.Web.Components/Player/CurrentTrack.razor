@inherits CurrentTrackBase

<MudCard Elevation="3" Class="pa-0 ma-0 mb-3 player-card">
    <MudOverlay Visible="@Loading" Absolute="true">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    </MudOverlay>
    <MudOverlay Visible="@Empty" Absolute="true">
    </MudOverlay>
    <MudCardHeader Class="pa-2">
        <CardHeaderContent>
            <CurrentTrackDetails Model="@Model?.Track" />
        </CardHeaderContent>
        <CardHeaderActions>
            <CurrentTrackFavourite Model="@Model?.Track" />
        </CardHeaderActions>
    </MudCardHeader>
    <CurrentTrackArtwork Model="@Model" />
    <CurrentTrackProgress />

</MudCard>