@*@inherits EditTrackBase

<WhipDialog Cancel="Cancel"
            CancelCaption="Cancel"
            Submit="Submit"
            SubmitCaption="OK">

    <ChildContent>
        <EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <MudCard>
                <MudCardContent>
                    <MudTextField MaxLength="256"
                                  Label="Title"
                                  @bind-Value="Model.Title"
                                  For="@(() => Model.Title)" />
                    <MudTextField MaxLength="2000"
                                  Label="Lyrics"
                                  Variant="Variant.Outlined"
                                  Lines="15"
                                  @bind-Value="Model.Lyrics"
                                  For="@(() => Model.Lyrics)" />
                    <MudButton Link="@LyricsSearchUrl"
                               Target="_blank"
                               Size="@Size.Small"
                               Class="mt-2"
                               Variant="Variant.Filled"
                               Color="Color.Default">
                        Search Lyrics
                    </MudButton>
                </MudCardContent>
            </MudCard>
        </EditForm>
    </ChildContent>

</WhipDialog>

@code {
    bool success;

    private void OnValidSubmit(EditContext context)
    {
        success = true;
        StateHasChanged();
    }
}*@