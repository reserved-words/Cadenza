
@if (Model != null)
{
    <img class="artist-image" src="@ImageSrc" />
}

@code {
    [Inject]
    public IArtworkFetcher ArtworkFetcher { get; set; }

    [Parameter]
    public ArtistDetails Model { get; set; }

    public string ImageSrc { get; private set; }

    protected override void OnParametersSet()
    {
        ImageSrc = ArtworkFetcher.GetArtistImageSrc(Model);
    }
}