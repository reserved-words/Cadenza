@inherits FavouriteTrackBase

@if (!IsEnabled)
{
    <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" Disabled="true" />   
}
else if (IsFavourite)
{
    <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Primary" OnClick="@Unfavourite" />
}
else
{
    <MudIconButton Icon="@Icons.Material.Filled.FavoriteBorder" OnClick="@Favourite" />
}