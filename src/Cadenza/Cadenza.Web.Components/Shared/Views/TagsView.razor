
@if (Model.Tags.Any())
{
    foreach (var tag in Model.Tags)
    {
        <MudChip Class="my-0" Color="Color.Primary" Size="@Size.Small" OnClick="@(() => OnViewTag(tag))">@tag</MudChip>
    }
}
else
{
    <MudChip Class="my-0" Color="@Color.Default" Size="@Size.Small">no tags</MudChip>
}


@code {
    [Inject]
    public IItemViewer ItemViewer { get; set; }

    [Parameter]
    public TagList Model { get; set; }

    private async Task OnViewTag(string id)
    {
        await ItemViewer.ViewTag(id);
    }
}
