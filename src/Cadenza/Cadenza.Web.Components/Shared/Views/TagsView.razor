@using Cadenza.State.Actions;

@if (Model.Tags.Any())
{
    foreach (var tag in Model.Tags)
    {
        <MudChip Class="my-0" Color="Color.Primary" Size="@Size.Small" OnClick="@(() => OnViewTag(tag))">@tag</MudChip>
    }
}
else
{
    <MudChip Class="my-0" Color="@Color.Default" Size="@Size.Small">no tags</MudChip>
}


@code {
    [Inject] public IDispatcher Dispatcher { get; set; }

    [Parameter] public TagListVM Model { get; set; }

    private void OnViewTag(string id)
    {
        Dispatcher.Dispatch(new ViewItemRequest(PlayerItemType.Tag, id, id));
    }
}
