

<MudCard>
    <MudCardHeader>
        <MudText Typo="@Typo.h3">Error</MudText>
    </MudCardHeader>
    <MudCardContent>
        @if (ErrorMessage != null)
        {
            <MudText Typo="@Typo.body1">@ErrorMessage</MudText>
        }

        @if (Exception != null)
        {
            <MudText Typo="@Typo.body1">@Exception.Message</MudText>
            <MudText Typo="@Typo.body1">@Exception.StackTrace</MudText>
        }
    </MudCardContent>
</MudCard>


@code {
    [Parameter] public string ErrorMessage { get; set; } = null;
    [Parameter] public Exception Exception { get; set; } = null;
}
