
<AppCardHeader Icon="@Type.GetIcon()">

    <MainContent>
        <MudText Typo="@Typo.h5">@Heading</MudText>
        @ChildContent
    </MainContent>

</AppCardHeader>

@code {
    [Parameter]
    public PlayerItemType Type { get; set; }

    [Parameter]
    public string Heading { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}