
<MudContainer Class="d-flex pa-0 ma-0">

    <MudPaper Elevation="0" Class="flex-grow-0 pa-0 ma-0 mr-2">
        <MudIcon Icon="fas fa-pen-fancy"
                 Color="@Color.Dark"
                 Size="@Size.Large"
                 Class="ma-1" />
    </MudPaper>
    
    <MudPaper Elevation="0" Class="flex-grow-1 pa-0 ma-0">
        <MudText Typo="@Typo.h6">Lyrics</MudText>
    </MudPaper>
    
    <MudPaper Elevation="0" Class="flex-grow-0 pa-0 ma-0">
        
        <MenuLyrics Class="mt-auto"
                    Id="@Id"
                    Source="@Source"
                    Size="@Size.Large" />

    </MudPaper>
</MudContainer>

@code {

    [Parameter]
    public LibrarySource Source { get; set; }

    [Parameter]
    public string Id { get; set; }

}