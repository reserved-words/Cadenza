
@if (Model != null)
{
    <ItemCardHeader Type="@PlayerItemType.Album"
                    Id="@Model.Id"
                    Source="@Model.Source">
        <ChildContent>
            
            @if (TabHeading)
            {
                <MudText Typo="@Typo.h5">@Model.Title</MudText>
            }
            else
            {
                <AlbumLink Typo="@Typo.h6" Id="@Model.Id" Title="@Model.Title" />
            }

            <ArtistLink Typo="Typo.body1" Id="@Model.ArtistId" Name="@Model.ArtistName" />

            @if (!TitleOnly)
            {
                <MudText Typo="Typo.body2">@Model.ReleaseType.GetDisplayName()</MudText>
                <MudText Typo="Typo.body2">@Model.Year</MudText>
            }
        </ChildContent>
    </ItemCardHeader>
}

@code {
    [Parameter]
    public Album Model { get; set; }

    [Parameter]
    public bool TitleOnly { get; set; }

    [Parameter]
    public bool TabHeading { get; set; }
}