
@if (Id != null)
{
    <ItemCardHeader Type="@PlayerItemType.Genre"
                    Id="@Id">
        <ChildContent>
            @if (TabHeading)
            {
                <MudText Typo="@Typo.h5">@Id</MudText>
            }
            else
            {
                <ActionLink Typo="@Typo.h6" Text="@Id" OnClick="@View" />
            }
        </ChildContent>
    </ItemCardHeader>
}

@code {
    [Inject]
    public IItemViewer Viewer { get; set; }

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public bool TabHeading { get; set; }

    public async Task View()
    {
        await Viewer.ViewGenre(Id);
    }
}