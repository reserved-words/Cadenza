
<ItemCardHeader Type="@PlayerItemType.Grouping"
                Id="@Id.ToString()">
    <ChildContent>
        @if (TabHeading)
        {
            <MudText Typo="@Typo.h5">@Id</MudText>
        }
        else
        {
            <GroupingLink Typo="@Typo.h6" Grouping="@Id" />
        }

    </ChildContent>
</ItemCardHeader>


@code {
    [Parameter]
    public Grouping Id { get; set; }

    [Parameter]
    public bool TabHeading { get; set; }
}