
<MudCard>
    <MudCardHeader Class="ma-0 px-2 pt-2 pb-0">
        <AppCardHeader Icon="@Type.GetIcon()">
            <MainContent>
                <MudText Typo="@Typo.h5">@Heading</MudText>
            </MainContent>
        </AppCardHeader>
    </MudCardHeader>
    <MudCardContent Class="ma-0 pa-2 pt-0">
        <MudDivider Class="mt-0 mb-1" />
        <MudContainer Class="ma-0 pa-2 pt-0">
            @ChildContent
        </MudContainer>

        @if (Tags != null)
        {
            <MudDivider Class="mt-0 mb-2" />
            <MudContainer Class="mx-0 mt-3 mb-1 pa-0">
                <TagsView Model="@Tags" />
            </MudContainer>
        }

    </MudCardContent>
</MudCard>


@code {
    [Parameter]
    public PlayerItemType Type { get; set; }

    [Parameter]
    public string Heading { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public TagList Tags { get; set; }
}