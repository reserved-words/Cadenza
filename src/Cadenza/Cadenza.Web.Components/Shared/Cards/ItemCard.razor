
<MudCard Elevation="@Elevation">

    @if (DisplayAsCard)
    {
        <MudCardHeader Class="ma-0 px-2 pt-2 pb-0">
            <ItemCardHeader Type="@Type" Heading="@Heading" Toolbar="@Toolbar" />
        </MudCardHeader>
    }

    <MudCardContent Class="@ContentClass">

        <MudDivider Class="mt-0 mb-1" />

        <MudContainer Class="ma-0 pa-2 pt-0">
            @ChildContent
        </MudContainer>

        @if (Tags != null)
        {
            <MudDivider Class="mt-0 mb-2" />
            <MudContainer Class="mx-0 mt-3 mb-1 pa-0">
                <TagsView Model="@Tags" />
            </MudContainer>
        }

    </MudCardContent>
</MudCard>


@code {
    [Parameter]
    public PlayerItemType Type { get; set; }

    [Parameter]
    public bool DisplayAsCard { get; set; } = true;

    [Parameter]
    public string Heading { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public TagList Tags { get; set; }

    [Parameter]
    public RenderFragment Toolbar { get; set; }

    private string ContentClass => DisplayAsCard ? "ma-0 pa-2 pt-0" : "ma-0 pa-0";

    private int Elevation => DisplayAsCard ? 3 : 0;
}