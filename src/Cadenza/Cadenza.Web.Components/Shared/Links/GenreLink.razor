@using Cadenza.Common

<ActionLink Typo="@Typo" Text="@DisplayName" OnClick="@View"></ActionLink>

@code {
    [Inject] public IDispatcher Dispatcher { get; set; }

    [Parameter] public string Genre { get; set; }
    [Parameter] public Typo Typo { get; set; } = Typo.body1;

    private string DisplayName => Genre.GetGenreDisplayName();

    private void View()
    {
        Dispatcher.Dispatch(new ViewItemRequest(PlayerItemType.Genre, Genre, DisplayName));
    }
}
