@using Cadenza.State.Actions;

<ActionLink Typo="@Typo" Text="@Genre" OnClick="@View"></ActionLink>

@code {
    [Inject]
    public IDispatcher Dispatcher { get; set; }

    [Parameter]
    public string Genre { get; set; }

    [Parameter]
    public Typo Typo { get; set; } = Typo.body1;

    private void View()
    {
        Dispatcher.Dispatch(new ViewItemRequest(PlayerItemType.Genre, Genre, Genre));
    }
}
