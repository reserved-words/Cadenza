@using Cadenza.State.Actions;

<ActionLink Typo="@Typo" Text="@Title" OnClick="@View"></ActionLink>

@code {
    [Inject]
    public IDispatcher Dispatcher { get; set; }

    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public Typo Typo { get; set; } = Typo.body1;

    private void View()
    {
       Dispatcher.Dispatch(new ViewItemRequest(PlayerItemType.Album, Id.ToString(), Title));
    }
}
