@using Cadenza.State.Actions;

@if (Grouping != null)
{
    <ActionLink Typo="@Typo" Text="@Grouping.Name" OnClick="@View"></ActionLink>
}

@code {
    [Inject]
    public IDispatcher Dispatcher { get; set; }

    [Parameter]
    public Grouping Grouping { get; set; }

    [Parameter]
    public Typo Typo { get; set; } = Typo.body1;

    private void View()
    {
        Dispatcher.Dispatch(new ViewItemRequest(PlayerItemType.Grouping, Grouping.Id.ToString(), Grouping.Name));
    }
}
