<MudText Typo="@Typo">
    
    @if (Icon != null)
    {
        <MudIcon Icon="@Icon" Size="@Size.Small" Class="mr-2" />
    }

    <MudLink Typo="@Typo" Style="cursor: pointer;" onclick="@(() => OnClick())" Color="@Color.Surface">
        @Text
    </MudLink>
</MudText>


@code {
    [Parameter]
    public Typo Typo { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public Func<Task> OnClick { get; set; }
}
