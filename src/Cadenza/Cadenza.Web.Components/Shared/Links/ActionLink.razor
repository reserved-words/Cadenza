<MudText Typo="@Typo">
    
    @if (Icon != null)
    {
        <MudIcon Icon="@Icon" Size="@Size.Small" Class="@IconClass" />
    }

    <MudLink Typo="@Typo" OnClick="@(() => OnClick())" Color="@Color.Surface" Class="@Class" title="@Text">
        @Text
    </MudLink>
</MudText>


@code {
    [Parameter] public Typo Typo { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public Action OnClick { get; set; }

    private string IconClass => "action-link mr-2 " + Class;
}
