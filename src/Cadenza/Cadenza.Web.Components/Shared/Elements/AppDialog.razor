
<MudDialog Class="no-padding-xs">
    <DialogContent>
        <MudContainer Class="pa-0 ma-0 fixed-height">
            @ChildContent
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudStack Row="true">
            @if (ShowCancel)
            {
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="@Cancel">@CancelCaption</MudButton>
            }
            @if (ShowSubmit)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@Submit">@SubmitCaption</MudButton>
            }
        </MudStack>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> Cancel { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> Submit { get; set; }

    [Parameter]
    public string CancelCaption { get; set; }

    [Parameter]
    public string SubmitCaption { get; set; }

    public bool ShowCancel => CancelCaption != null;

    public bool ShowSubmit => SubmitCaption != null;
}