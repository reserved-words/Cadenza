@if (ShowLabel)
{
    <MudButton StartIcon="@Icon" OnClick="@OnClick" Class="@Class" Size="@IconSize" Disabled="@Disabled">@Label</MudButton>
}
else
{
    <MudIconButton Icon="@Icon" OnClick="@OnClick" Class="@Class" Size="@IconSize" Disabled="@Disabled"></MudIconButton>
}

@code {
    [Parameter] public string Icon { get; set; }
    [Parameter] public Size IconSize { get; set; }
    [Parameter] public string Label { get; set; }
    [Parameter] public bool ShowLabel { get; set; }
    [Parameter] public Tab Tab { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public Action<Tab> OnClickItem { get; set; }
    [Parameter] public bool Disabled { get; set; }

    private void OnClick()
    {
        OnClickItem(Tab);
    }
}
