@using Cadenza.Web.Components.Forms.Track
@inherits EditTrackBase

<AppDialog Cancel="OnCancel"
           CancelCaption="Cancel"
           Submit="OnSubmit"
           SubmitCaption="OK">
    <ChildContent>
        <EditForm Model="@EditableItem">

            <DataAnnotationsValidator />

            <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                <MudExpansionPanels Dense="true" DisableGutters="true" Elevation="0">
                    <MudExpansionPanel Text="Details">
                        <EditTrackDetails Model="@EditableItem" Breakpoint="Breakpoint.Xs" />
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="Lyrics">
                        <EditTrackLyrics Model="@EditableItem" Breakpoint="Breakpoint.Xs" />
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudHidden>

            <MudHidden Breakpoint="Breakpoint.Xs">
                <MudGrid Spacing="1" Class="modal-grid">
                    <MudItem sm="6">
                        <EditTrackDetails Model="@EditableItem" Breakpoint="Breakpoint.SmAndUp" />
                    </MudItem>
                    <MudItem sm="6">
                        <EditTrackLyrics Model="@EditableItem" Breakpoint="Breakpoint.SmAndUp" />
                    </MudItem>
                </MudGrid>
            </MudHidden>

        </EditForm>
    </ChildContent>
</AppDialog>