@inherits EditArtistBase

@using Cadenza.Web.Components.Forms.Artist

<AppDialog Cancel="OnCancel"
           CancelCaption="Cancel"
           Submit="OnSubmit"
           SubmitCaption="OK"
           FullHeight="true">
    <ChildContent>
        <EditForm Model="@EditableItem">

            <DataAnnotationsValidator />

            <SubGrid>
                <SubGridColumn sm="6">
                    <SubGridRow>
                        <EditArtistImage Model="@EditableItem" />
                    </SubGridRow>
                </SubGridColumn>
                <SubGridColumn sm="6">
                    <SubGridRow>
                        <EditArtistDetails Model="@EditableItem" Groupings="@Groupings" />
                    </SubGridRow>
                </SubGridColumn>
            </SubGrid>

        </EditForm>
    </ChildContent>
</AppDialog>