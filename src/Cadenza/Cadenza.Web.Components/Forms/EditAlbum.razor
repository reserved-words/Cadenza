@using Cadenza.Web.Components.Forms.Album
@inherits EditAlbumBase

<AppDialog Cancel="OnCancel"
           CancelCaption="Cancel"
           Submit="OnSubmit"
           SubmitCaption="OK">
    <ChildContent>

        <EditForm Model="@EditableItem">

            <DataAnnotationsValidator />

            <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                <MudExpansionPanels Dense="true" DisableGutters="true" Elevation="0">
                    <MudExpansionPanel Text="Artwork">
                        <EditAlbumArtwork Model="@EditableItem" Breakpoint="Breakpoint.Xs" />
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="Details">
                        <EditAlbumDetails Model="@EditableItem" Breakpoint="Breakpoint.Xs" />
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudHidden>

            <MudHidden Breakpoint="Breakpoint.Xs">
                <MudGrid Spacing="1" Class="modal-grid">
                    <MudItem sm="6">
                        <EditAlbumArtwork Model="@EditableItem" Breakpoint="Breakpoint.SmAndUp" />
                    </MudItem>
                    <MudItem sm="6">
                        <EditAlbumDetails Model="@EditableItem" Breakpoint="Breakpoint.SmAndUp" />
                    </MudItem>
                </MudGrid>
            </MudHidden>

        </EditForm>

    </ChildContent>
</AppDialog>