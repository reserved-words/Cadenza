@using Cadenza.Web.Components.Forms.Artist
@inherits EditArtistBase

<AppDialog Cancel="OnCancel"
            CancelCaption="Cancel"
            Submit="OnSubmit"
            SubmitCaption="OK">
    <ChildContent>
        <EditForm Model="@EditableItem">

            <DataAnnotationsValidator />
            
            <MudGrid Spacing="1" Class="modal-grid">
                <MudItem sm="6">
                    <EditArtistImage Model="@EditableItem" />
                </MudItem>
                <MudItem sm="6">
                    <EditArtistDetails Model="@EditableItem" />
                </MudItem>
            </MudGrid>

        </EditForm>
    </ChildContent>
</AppDialog>