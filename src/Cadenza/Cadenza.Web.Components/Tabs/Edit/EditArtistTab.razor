@inherits EditArtistTabBase

<SubGrid>

    <SubGridColumn md="3">
        <SubGridRow RowHeight="@RowHeight.Fixed">

            <MudCard>
                <MudCardHeader>
                    <MudText Typo="@Typo.h5">Edit Artist</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <EditArtistDetails Model="@EditableArtist" />
                </MudCardContent>
            </MudCard>

        </SubGridRow>
    </SubGridColumn>

    <SubGridColumn md="3">
        <SubGridRow RowHeight="@RowHeight.Fixed">

            <MudCard>
                <MudCardHeader>
                    <MudText Typo="@Typo.h5">Edit Artist Image</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <EditArtistImage Model="@EditableArtist" />
                </MudCardContent>
            </MudCard>

        </SubGridRow>
    </SubGridColumn>

    <SubGridColumn md="6">
        <SubGridRow RowHeight="@RowHeight.Full">

            <MudCard>
                <MudCardHeader>
                    <MudText Typo="@Typo.h5">Edit Artist Releases</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <EditArtistReleases Model="@EditableReleases" />
                </MudCardContent>
            </MudCard>

        </SubGridRow>
    </SubGridColumn>

</SubGrid>
