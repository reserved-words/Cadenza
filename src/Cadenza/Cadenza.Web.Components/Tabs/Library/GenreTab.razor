@inherits GenreTabBase

@if (!Loading)
{
    <LibraryWrapper Breadcrumbs="@Breadcrumbs" Type="@PlayerItemType.Genre" Id="@Genre.Grouping.Id.ToString()" Name="@Genre.Genre">
        <SubGrid>

            <SubGridColumn sm="4" md="3">
                <SubGridRow RowHeight="@RowHeight.Fixed">
                    <GenreDetail Genre="@Genre.Genre"
                                 Grouping="@Genre.Grouping" />
                </SubGridRow>
            </SubGridColumn>

            <SubGridColumn sm="8" md="9">
                <SubGridRow RowHeight="@RowHeight.Full">

                    <MudDivider Class="xs-only" />
                    <GenreArtists Artists="@Artists" />

                </SubGridRow>
            </SubGridColumn>

        </SubGrid>
    </LibraryWrapper>
}