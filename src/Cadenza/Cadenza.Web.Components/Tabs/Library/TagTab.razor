@inherits TagTabBase

@if (!Loading)
{
    <LibraryWrapper Breadcrumbs="@Breadcrumbs">
        <SubGrid>

            <SubGridColumn md="3">
                <SubGridRow RowHeight="@RowHeight.Fixed">

                    <ItemCard Type="@PlayerItemType.Tag" Tags="@null">
                        <ChildContent>
                            <MudSelect Label="Filter by type"
                                       @bind-Value="FilterType"
                                       For="@(() => FilterType)"
                                       T="@string">
                                @foreach (var type in FilterTypes.Keys)
                                {
                                    <MudSelectItem Value="@type">@type</MudSelectItem>
                                }
                            </MudSelect>
                        </ChildContent>
                        <Toolbar>
                            <TagToolbar Tag="@Tag" />
                        </Toolbar>
                    </ItemCard>

                </SubGridRow>

            </SubGridColumn>

            <SubGridColumn md="9">
                <SubGridRow RowHeight="@RowHeight.Full">
                    <AppCardScrollContainer>
                        <ChildContent>
                            <TagResultTable Items="@Items" OnViewItem="@OnViewItem" OnFilter="OnFilter" />
                        </ChildContent>
                    </AppCardScrollContainer>
                </SubGridRow>
            </SubGridColumn>

        </SubGrid>
    </LibraryWrapper>
}