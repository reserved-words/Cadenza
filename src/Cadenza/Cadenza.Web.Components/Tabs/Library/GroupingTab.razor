@inherits GroupingTabBase

@if (!Loading)
{
    <LibraryWrapper Breadcrumbs="@Breadcrumbs" Type="@PlayerItemType.Grouping" Id="@Grouping.Id.ToString()" Name="@Grouping.Name">
        <ChildContent>
            <SubGrid>

                <SubGridColumn sm="4" md="3">
                    <SubGridRow RowHeight="@RowHeight.Fixed">
                        <GroupingDetail Grouping="@Grouping">
                        </GroupingDetail>
                    </SubGridRow>
                </SubGridColumn>

                <SubGridColumn sm="8" md="9">
                    <SubGridRow RowHeight="@RowHeight.Full">

                        <MudDivider Class="xs-only" />
                        <GroupingGenres Genres="@Genres" />

                    </SubGridRow>
                </SubGridColumn>

            </SubGrid>
        </ChildContent>
    </LibraryWrapper>
}