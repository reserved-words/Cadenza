@inherits AlbumTabBase

@if (!Loading)
{
    <LibraryWrapper Breadcrumbs="@Breadcrumbs" Type="@PlayerItemType.Album" Id="@Album.Id.ToString()" Name="@Album.Title">
        <SubGrid>

            <SubGridColumn sm="4" md="3">
                <SubGridRow RowHeight="@RowHeight.Fixed">
                    <AlbumDetail Model="@Album"
                                 DiscDurations="@DiscDurations"/>
                </SubGridRow>
            </SubGridColumn>

            <SubGridColumn sm="8" md="9">
                <SubGridRow RowHeight="@RowHeight.Full">

                    <MudDivider Class="xs-only" />
                    <AlbumTracks Album="@Album"
                                 Discs="@Discs" />

                </SubGridRow>

            </SubGridColumn>

        </SubGrid>
    </LibraryWrapper>
}