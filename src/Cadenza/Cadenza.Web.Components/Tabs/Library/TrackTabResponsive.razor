@using Cadenza.Common

<LibraryWrapper Breadcrumbs="@Breadcrumbs" Type="@PlayerItemType.Track" Id="@Model.Track.Id.ToString()" Name="@Model.Track.Title">
    <SubGrid>

        <SubGridColumn sm="6" md="8">
            <SubGridRow RowHeight="@RowHeight.Fixed">

                <SubGrid>

                    <SubGridColumn sm="12" md="6">

                        <SubGridRow RowHeight="@RowHeight.Fixed">

                            <TrackDetail Model="@Model.Track"
                                         Breakpoint="@Breakpoint" />

                        </SubGridRow>

                        <SubGridRow RowHeight="@RowHeight.Fixed">

                            <MudDivider Class="xs-only" />
                            <TrackArtist Model="@Model.Artist"
                                         Breakpoint="@Breakpoint" />

                        </SubGridRow>

                        @if (Breakpoint == Breakpoint.Sm)
                        {
                            <SubGridRow RowHeight="@RowHeight.Fixed">

                                <MudDivider Class="xs-only" />
                                <TrackAlbum Model="@Model.Album"
                                            AlbumTrack="@Model.AlbumTrack"
                                            Breakpoint="@Breakpoint" />

                            </SubGridRow>
                        }

                    </SubGridColumn>

                    @if (Breakpoint != Breakpoint.Sm)
                    {
                        <SubGridColumn md="6">
                            <SubGridRow RowHeight="@RowHeight.Fixed">

                                <MudDivider Class="xs-only" />
                                <TrackAlbum Model="@Model.Album"
                                            AlbumTrack="@Model.AlbumTrack"
                                            Breakpoint="@Breakpoint" />

                            </SubGridRow>
                        </SubGridColumn>
                    }

                </SubGrid>

            </SubGridRow>
        </SubGridColumn>

        <SubGridColumn sm="6" md="4">
            <SubGridRow RowHeight="@RowHeight.Full">

                @if (!string.IsNullOrWhiteSpace(Model.Track.Lyrics))
                {
                    <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                        <MudDivider />
                        <MudExpansionPanels Dense="true" DisableGutters="true" Square="true">
                            <MudExpansionPanel Text="Lyrics">
                                <TrackLyrics Model="@Model.Track"
                                             Breakpoint="@Breakpoint" />
                            </MudExpansionPanel>
                        </MudExpansionPanels>
                    </MudHidden>
                }

                <MudHidden Breakpoint="Breakpoint.Xs">
                    <TrackLyrics Model="@Model.Track"
                                 Breakpoint="@Breakpoint" />
                </MudHidden>
            </SubGridRow>
        </SubGridColumn>

    </SubGrid>
</LibraryWrapper>

@code {
    [Parameter] public TrackFullVM Model { get; set; }
    [Parameter] public Breakpoint Breakpoint { get; set; }

    private bool ShowAlbumHeader => Breakpoint != Breakpoint.Xs;

    private bool ShowArtistHeader => Breakpoint != Breakpoint.Xs;

    protected List<LibraryBreadcrumb> Breadcrumbs => new List<LibraryBreadcrumb>
    {
        new LibraryBreadcrumb(PlayerItemType.Grouping, Model.AlbumArtist.Grouping, Model.AlbumArtist.Grouping),
        new LibraryBreadcrumb(PlayerItemType.Genre, (Model.AlbumArtist.Grouping, Model.AlbumArtist.Genre).GenreId(), Model.AlbumArtist.Genre),
        new LibraryBreadcrumb(PlayerItemType.Artist, Model.AlbumArtist.Id, Model.AlbumArtist.Name),
        new LibraryBreadcrumb(PlayerItemType.Album, Model.Album.Id, Model.Album.Title),
        new LibraryBreadcrumb(PlayerItemType.Track, Model.Track.Id, Model.Track.Title)
    };
}