@inherits ArtistTabBase

@if (!Loading)
{
    <LibraryWrapper Breadcrumbs="@Breadcrumbs">
        <SubGrid>

            <SubGridColumn sm="4" md="3">
                <SubGridRow RowHeight="@RowHeight.Fixed">
                    <ArtistDetail Model="@Artist">
                        <Toolbar>
                            <ArtistToolbar Artist="@Artist" />
                        </Toolbar>
                    </ArtistDetail>
                </SubGridRow>

            </SubGridColumn>

            <SubGridColumn sm="8" md="9">
                <SubGridRow RowHeight="@RowHeight.Full">

                    <MudDivider Class="xs-only" />
                    <ArtistReleases Releases="@Releases" />

                </SubGridRow>
            </SubGridColumn>

        </SubGrid>
    </LibraryWrapper>
}