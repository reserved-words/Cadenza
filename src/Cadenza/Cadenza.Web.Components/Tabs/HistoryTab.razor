
<TabGrid>

    <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">

        <TabGridColumn>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <MudTabs Elevation="0"
                         Rounded="true"
                         ApplyEffectsToContainer="true"
                         Centered="true"
                         KeepPanelsAlive="true"
                         PanelClass="pa-0"
                         Class="full-width">
                    <MudTabPanel Text="Recent">
                        <HistoryRecent />
                    </MudTabPanel>
                    <MudTabPanel Text="Artists">
                        <HistoryArtists />
                    </MudTabPanel>
                    <MudTabPanel Text="Albums">
                        <HistoryAlbums />
                    </MudTabPanel>
                    <MudTabPanel Text="Tracks">
                        <HistoryTracks />
                    </MudTabPanel>
                </MudTabs>
            </TabGridRow>
        </TabGridColumn>

    </MudHidden>

    <MudHidden Breakpoint="Breakpoint.SmAndDown">

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Full">
                <HistoryRecent />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <HistoryArtists />
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <RecentAlbums />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <HistoryAlbums />
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <HistoryTracks />
            </TabGridRow>
        </TabGridColumn>

    </MudHidden>

</TabGrid>
