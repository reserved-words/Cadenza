
<TabGrid>

    <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">

        <TabGridColumn>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <MudTabs Elevation="0"
                         Rounded="true"
                         ApplyEffectsToContainer="true"
                         Centered="true"
                         KeepPanelsAlive="true"
                         PanelClass="pa-0"
                         Class="full-width">
                    <MudTabPanel Text="Recent">
                        <RecentTracks />
                    </MudTabPanel>
                    <MudTabPanel Text="Artists">
                        <TopArtists />
                    </MudTabPanel>
                    <MudTabPanel Text="Albums">
                        <TopAlbums />
                    </MudTabPanel>
                    <MudTabPanel Text="Tracks">
                        <TopTracks />
                    </MudTabPanel>
                </MudTabs>
            </TabGridRow>
        </TabGridColumn>

    </MudHidden>

    <MudHidden Breakpoint="Breakpoint.SmAndDown">

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Full">
                <RecentTracks />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TopArtists />
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <RecentlyPlayedAlbums />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <RecentlyAddedAlbums />
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TopAlbums />
            </TabGridRow>
        </TabGridColumn>

    </MudHidden>

</TabGrid>
