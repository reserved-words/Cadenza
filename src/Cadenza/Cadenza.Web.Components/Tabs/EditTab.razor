@inherits EditTabBase

@if (CurrentItem != null)
{
    if (CurrentItem.Value.Type == PlayerItemType.Album)
    {
        <EditAlbumTab Item="@CurrentItem.Value" />
    }
    else if (CurrentItem.Value.Type == PlayerItemType.Artist)
    {
        <EditArtistTab Item="@CurrentItem.Value" />
    }
    else if (CurrentItem.Value.Type == PlayerItemType.Track)
    {
        <EditTrackTab Item="@CurrentItem.Value" />
    }
}

<MudButton OnClick="@ResetTabs" Variant="@Variant.Outlined">Reset Tabs</MudButton>