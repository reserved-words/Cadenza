@using Cadenza.Common.Domain.Model.Album
@using Cadenza.Common.Domain.Extensions


<AlbumLink Typo="@Typo.body1" Id="@Id" Title="@Title" />
<ArtistLink Typo="@Typo.body2" Id="@ArtistId" Name="@ArtistName" />
<MudText Typo="Typo.body1">@ReleaseType</MudText>
<MudText Typo="Typo.body2">@Year</MudText>

@code {
    [Parameter]
    public AlbumInfo Model { get; set; }

    public string ArtistId => Model?.ArtistId;
    public string ArtistName => Model?.ArtistName ?? "Album Artist";
    public string Id => Model?.Id;
    public string ReleaseType => Model?.ReleaseType.GetDisplayName() ?? "Release Type";
    public string Title => Model?.Title ?? "Album Title";
    public string Year => Model?.Year ?? "Year";

}
