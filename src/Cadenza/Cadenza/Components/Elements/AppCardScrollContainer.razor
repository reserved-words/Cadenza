
<MudCard Elevation="@Elevation"
         Class="ma-0 pa-0 fixed-height"
         Style="display: flex; flex-direction: column;">

    @if (HeaderContent != null)
    {
        <MudCardHeader Style="flex-grow: 0;" Class="@HeaderClass">
            <CardHeaderContent>
                @HeaderContent
            </CardHeaderContent>
        </MudCardHeader>
    }

    <MudCardContent Style="flex-grow: 1;" Class="fixed-height-scroll pa-0 ma-0">
       @ChildContent
    </MudCardContent>

</MudCard>

@code {
    [Parameter] public int Elevation { get; set; } = 2;
    [Parameter] public RenderFragment HeaderContent { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public int HeaderPaddingSides { get; set; } = 3;
    [Parameter] public int HeaderPaddingTop { get; set; } = 3;
    [Parameter] public int HeaderPaddingBottom { get; set; } = 3;

    private string HeaderClass => $"px-{HeaderPaddingSides} pt-{HeaderPaddingTop} pb-{HeaderPaddingBottom}";
}
