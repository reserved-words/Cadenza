
<MudPaper Elevation="@Elevation"
          Class="ma-0 fixed-height">

    <MudContainer Class="@ContainerClass">
       @ChildContent
    </MudContainer>

</MudPaper>

@code {
    [Parameter] public int Elevation { get; set; } = 2;
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public int Padding { get; set; } = 2;

    private string ContainerClass => $"fixed-height-scroll pa-{Padding} ma-0";
}
