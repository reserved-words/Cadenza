@inherits SidebarBase

<WhipTab>
    <WhipColumn md="12">
        <WhipRow RowHeight="@RowHeight.Fixed">
            <CurrentlyPlayingHeader />
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <WhipContainer>
                <CurrentTrack />
            </WhipContainer>
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <WhipContainer>
                <PlayerControls OnPause="@OnPause"
                                OnResume="@OnResume"
                                OnSkipNext="@OnSkipNext"
                                OnSkipPrevious="@OnSkipPrevious" />
            </WhipContainer>
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <WhipContainer>
                <Shuffle OnPlay="@OnPlay" />
            </WhipContainer>
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Stretch">
            <Search />
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <WhipContainer>
                <Sync />
            </WhipContainer>
        </WhipRow>
    </WhipColumn>
</WhipTab>