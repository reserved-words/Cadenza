
<WhipTab>
    <WhipColumn md="12">
        <WhipRow RowHeight="@RowHeight.Fixed">
            <CurrentlyPlayingHeader />
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <WhipContainer>
                <CurrentTrack />
            </WhipContainer>
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <WhipContainer>
                <PlayerControls />
            </WhipContainer>
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <WhipContainer>
                <Shuffle />
            </WhipContainer>
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Stretch">
            <Search OnViewItem="@OnViewItem" />
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <Toolbar />
        </WhipRow>
    </WhipColumn>
</WhipTab>

@code{
    [Parameter]
    public Func<SearchResultItem, Task> OnViewItem { get; set; }
}