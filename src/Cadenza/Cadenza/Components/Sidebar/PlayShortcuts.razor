@inherits PlayShortcutsBase

@using Cadenza.Web.Common.Interfaces.Play

<MudButton Class="mt-2" 
           OnClick="@PlayLibrary" 
           FullWidth="true" 
           Variant="@Variant.Filled">
    Play All
</MudButton>

<PlayShortcutsMenu Label="Play Grouping">
    @foreach (var grouping in Groupings)
    {
        <MudMenuItem OnClick="@(() => PlayGrouping(grouping))" Icon="@PlayerItemType.Grouping.GetIcon()">@grouping.Name</MudMenuItem>
    }
</PlayShortcutsMenu>

<PlayShortcutsMenu Label="Play Recent Album">
    @foreach (var item in RecentAlbums)
    {
        <MudMenuItem OnClick="@(() => PlayRecentAlbum(item))" Icon="@Icons.Material.Filled.History">
            <MudText Typo="@Typo.body1">@item.Title</MudText>
            <MudText Typo="@Typo.body2">@item.ArtistName</MudText>
        </MudMenuItem>
    }
</PlayShortcutsMenu>

<PlayShortcutsMenu Label="Play Recent Tag">
    @foreach (var tag in RecentTags)
    {
        <MudMenuItem OnClick="@(() => PlayRecentTag(tag))" Icon="@Icons.Material.Filled.History">@tag</MudMenuItem>
    }
</PlayShortcutsMenu>

