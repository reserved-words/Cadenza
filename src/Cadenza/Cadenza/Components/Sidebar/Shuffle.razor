@inherits ShuffleBase

<MudButton OnClick="@OnShuffleAll"
           Class="mb-2"
           Variant="@Variant.Filled"
           StartIcon="@Icons.Material.Filled.Shuffle"
           Style="width: 100%;">All Library</MudButton>


<MudButtonGroup VerticalAlign="true" Style="width: 100%;" Variant="@Variant.Filled">
    @foreach (var grouping in Groupings){
        <MudButton OnClick="@(() => OnShuffleGrouping(grouping))"
                   Variant="@Variant.Filled"
                   Style="width: 100%;">@($"{grouping}")</MudButton>
    }
</MudButtonGroup>