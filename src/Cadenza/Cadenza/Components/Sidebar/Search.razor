@inherits SearchBase

<MudToolBar>

    @if (IsLoading)
    {
        <MudText>Loading items...</MudText>
    }
    else
    {
        <MudAutocomplete T="PlayerItem"
                     Class="ma-0 pa-0"
                     Label="Search"
                     @bind-Value="Result"
                     SearchFunc="@Search"
                     ToStringFunc="@(e => e == null ? null : e.Name)"
                     CoerceText=true
                     CoerceValue=false
                     Variant="@Variant.Text"
                     MinCharacters=3
                     ResetValueOnEmptyText=true>
            <ItemTemplate Context="e">
                <MudContainer Class="d-flex flex-row pa-0 ma-0">
                    <MudIcon Icon="@e.Type.GetIcon()"
                         Class="mb-n1 mr-2"
                         Color="@Color.Dark" />
                    <MudContainer Class="pa-0 ma-0">
                        <MudText Color=Color.Dark
                             Typo="@Typo.body1"
                             Class="pa-0 ma-0">
                            @e.Name
                        </MudText>
                        <MudText Color=Color.Dark
                             Typo="@Typo.body2"
                             Class="pa-0 ma-0">
                            @e.Artist
                        </MudText>
                        <MudText Color=Color.Dark
                             Typo="@Typo.body2"
                             Class="pa-0 ma-0">
                            @e.AlbumDisplay
                        </MudText>
                    </MudContainer>
                </MudContainer>
            </ItemTemplate>
        </MudAutocomplete>
    }

    <MudButton StartIcon="@Icons.Material.Filled.PlayArrow" Color="Color.Inherit" Class="mx-2" OnClick="@(() => OnPlay())">Play</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Clear" Color="Color.Inherit" Class="mx-2" OnClick="@(() => OnClear())">Clear</MudButton>

</MudToolBar>