@inherits CurrentlyPlayingHeaderBase

<MudContainer Class="ma-0 pa-0">
    <MudText Typo="Typo.h6">Currently Playing</MudText>
    @if (ShowViewLink)
    {
        <ActionLink Typo="Typo.body1" OnClick="@OnView" Text="@PlaylistName" />
    }
    else
    {
        <MudText Typo="Typo.body1">@PlaylistName</MudText>
    }
    <MudDivider Class="my-1" />
</MudContainer>