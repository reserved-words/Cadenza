@inherits CurrentlyPlayingHeaderBase

<WhipCard Padding="false"
          Bordered="false">
    <MudText Typo="Typo.h6">Currently Playing</MudText>
    @if (ShowViewLink)
    {
        <MudLink Typo="Typo.body1" Style="cursor: pointer;" onclick="@(() => OnView())">@PlaylistName</MudLink>
    }
    else
    {
        <MudText Typo="Typo.body1">@PlaylistName</MudText>
    }
</WhipCard>