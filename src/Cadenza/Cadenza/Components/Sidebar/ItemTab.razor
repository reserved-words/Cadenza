@using Cadenza.Components.Tabs.Items

<WhipTab>

    @if (Item.Type == SearchableItemType.Artist)
    {
        <ArtistTab Id="@Item.Id" />
    }
    else if (Item.Type == SearchableItemType.Album)
    {
        <AlbumTab Id="@Item.Id" Source="@Item.Source.Value" />
    }
    else if (Item.Type== SearchableItemType.Track)
    {
        <TrackTab Id="@Item.Id" Source="@Item.Source.Value" />
    }

</WhipTab>

@code {
    [Parameter]
    public SearchResultItem Item { get; set; }
}
