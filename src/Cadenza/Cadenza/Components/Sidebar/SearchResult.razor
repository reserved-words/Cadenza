@inherits SearchResultBase

<MudCard>

    <MudCardContent>
        <MudContainer Class="pa-0 ma-0">
            <MudText Color=Color.Dark
                     Typo="@Typo.body1"
                     Class="pa-0 ma-0">
                @Result.Name
            </MudText>
            <MudText Color=Color.Dark
                     Typo="@Typo.body2"
                     Class="pa-0 ma-0">
                @Result.Artist
            </MudText>
            <MudText Color=Color.Dark
                     Typo="@Typo.body2"
                     Class="pa-0 ma-0">
                @Result.AlbumDisplay
            </MudText>
        </MudContainer>
    </MudCardContent>

    <MudCardActions Class="pt-0">

        <MudIconButton Icon="@MudBlazor.Icons.Material.Filled.PlayCircleOutline"
                       Color="@Color.Dark"
                       Class="pa-0 ma-0 mr-2 align-self-start"
                       Disabled="@(Result == null)"
                       OnClick="@OnPlay" />

        <MudIconButton Icon="@SearchableItemType.Artist.GetIcon()"
                       Color="@Color.Dark"
                       Class="pa-0 ma-0 mr-2 align-self-start"
                       Disabled="@(!DisplayArtistLink)"
                       OnClick="@(() => OnViewArtist())" />

        <MudIconButton Icon="@SearchableItemType.Album.GetIcon()"
                       Color="@Color.Dark"
                       Class="pa-0 ma-0 mr-2 align-self-start"
                       Disabled="@(!DisplayAlbumLink)"
                       OnClick="@OnViewAlbum" />

        <MudIconButton Icon="@SearchableItemType.Track.GetIcon()"
                       Color="@Color.Dark"
                       Class="pa-0 ma-0 mr-2 align-self-start"
                       Disabled="@(!DisplayTrackLink)"
                       OnClick="@OnViewTrack" />

    </MudCardActions>

</MudCard>
