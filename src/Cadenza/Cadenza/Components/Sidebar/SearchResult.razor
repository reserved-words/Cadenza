@inherits SearchResultBase

<MudCard Elevation="3" Class="ma-0 pa-0">

    <MudCardHeader Class="pa-3 pb-0">
        <MudContainer Class="d-flex pa-0 ma-0">

            <MudPaper Elevation="0"
                      Class="flex-grow-0 pa-0 ma-0 mr-2">
                <MudIcon Icon="@Result.Type.GetIcon()"
                         Size="@Size.Medium"
                         Class="ma-1" />
            </MudPaper>

            <MudPaper Elevation="0" Class="flex-grow-1 pa-0 ma-0">
                <ActionLink Typo="Typo.body1" OnClick="@OnViewItem" Text="@Result.Name" />
                <MudText Typo="@Typo.body2">@Result.Artist</MudText>
                <MudText Typo="@Typo.body2">@Result.AlbumDisplay</MudText>
            </MudPaper>

        </MudContainer>
    </MudCardHeader>
    <MudCardContent Class="pa-0">
        <MudDivider Class="pa-0 ma-0" />
    </MudCardContent>
    <MudCardActions Class="pa-0 ma-0 d-flex justify-space-between">

        <MudButton OnClick="@OnPlay">Play</MudButton>

        <MudIconButton Class="mr-2"
                       Style="flex: unset;"
                       Icon="@Icons.Material.Filled.Clear"
                       OnClick="@OnClear" />

    </MudCardActions>

</MudCard>
