@using Cadenza.Components.Tabs.Items
@using Cadenza.Core.Model

<WhipTab>

    @if (Item.Type == PlayerItemType.Artist)
    {
        <ArtistTab Id="@Item.Id" />
    }
    else if (Item.Type == PlayerItemType.Album)
    {
        <AlbumTab Id="@Item.Id" />
    }
    else if (Item.Type == PlayerItemType.Track)
    {
        <TrackTab Id="@Item.Id" />
    }
    else if (Item.Type == PlayerItemType.Grouping)
    {
        <GroupingTab Id="@Item.Id" />
    }
    else if (Item.Type == PlayerItemType.Genre)
    {
        <GenreTab Id="@Item.Id" />
    }

</WhipTab>

@code {
    [Parameter]
    public ViewItem Item { get; set; }
}
