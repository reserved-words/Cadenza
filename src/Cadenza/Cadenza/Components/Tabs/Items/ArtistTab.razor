@inherits ArtistTabBase

<MudGrid Class="ma-1">

    <MudItem xs="12" md="3" Class="pa-2">

        @if (Artist != null)
        {
            <MudCard Class="pa-0 ma-0">
                <MudCardHeader Class="pa-3"
                               Style="flex-grow: 0;">
                    <ArtistCardHeader Model="@Artist"
                                  OnPlay="OnPlayArtist"
                                  TitleOnly="false" />
                </MudCardHeader>
                <MudCardContent Class="px-2 pt-0 pb-2">
                    <MudDivider Class="pa-0 ma-0 mb-2" />
                    <ArtistLinksView Model="@Artist" />
                </MudCardContent>
            </MudCard>
        }

    </MudItem>

    <MudItem xs="12" md="9" Class="pa-2">

        @if (Releases != null)
        {
            <MudCard Class="pa-0 ma-0 fixed-height-margin"
                     Style="display: flex; flex-direction: column;">
                <MudCardContent Style="flex-grow: 1;"
                                Class="px-0 pt-1 pb-2 fixed-height-scroll">
                    <ArtistReleaseGroupsView Model="@Releases"
                                             OnPlay="@OnPlayAlbum" />
                </MudCardContent>
            </MudCard>
        }

    </MudItem>

</MudGrid>