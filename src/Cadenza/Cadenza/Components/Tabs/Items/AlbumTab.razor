@inherits AlbumTabBase

<MudGrid Class="ma-1">

    <MudItem xs="12" md="3" Class="pa-2">

        @if (Album != null)
        {
            <MudCard Elevation="2">
                <MudCardHeader Class="px-3 pt-3 pb-1">
                    <AlbumCardHeader Model="@Album"
                                     OnPlay="@OnPlay"
                                     TitleOnly="false" />
                </MudCardHeader>
                <MudCardContent Class="pa-2">
                    <AlbumArtworkView Model="@Album"
                                      OnPlay="@OnPlay" />
                </MudCardContent>
            </MudCard>
        }

    </MudItem>

    <MudItem xs="12" md="9" Class="pa-2">

        @if (Discs != null)
        {
            <MudCard Class="pa-0" Elevation="2">
                <AlbumDiscsView Model="@Discs" />
            </MudCard>
        }

    </MudItem>

</MudGrid>
