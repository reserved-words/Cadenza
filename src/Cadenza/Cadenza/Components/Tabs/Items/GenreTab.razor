@inherits GenreTabBase

<WhipColumn md="3">

    <WhipRow RowHeight="@RowHeight.Fixed">
        <MudCard Class="ma-3">
            <MudCardHeader Class="pa-3">
                <GenreCardHeader Id="@Id"
                                 OnView="@OnView" />
            </MudCardHeader>
            <MudCardContent Class="px-2 py-0">

                

            </MudCardContent>
        </MudCard>
    </WhipRow>

</WhipColumn>
<WhipColumn md="9">

        <MudCard Elevation="0"
                 Class="fixed-height-margin"
                 Style="display: flex; flex-direction: column;">

            <MudCardContent Style="flex-grow: 1;"
                            Class="fixed-height-scroll pa-0">
                <WhipTable T="@Artist"
                           Items="@Artists">
                    <RowTemplate>
                        <MudTd>
                            <ActionLink Typo="@Typo.body1" Text="@context.Name" OnClick="@(() => OnViewArtist(context))" />
                        </MudTd>
                    </RowTemplate>
                </WhipTable>
            </MudCardContent>
        </MudCard>

</WhipColumn>