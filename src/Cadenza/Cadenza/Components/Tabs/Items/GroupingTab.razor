@inherits GroupingTabBase

<WhipColumn md="3">

    <WhipRow RowHeight="@RowHeight.Fixed">
        <MudCard Class="ma-3">
            <MudCardHeader Class="pa-3">
                <GroupingCardHeader Id="@Grouping"
                                    OnView="@OnView" />
            </MudCardHeader>
            <MudCardContent Class="pa-0">
                <WhipTable T="@string"
                           Items="@Genres">
                    <RowTemplate>
                        <MudTd>
                            <ActionLink Typo="@Typo.body1" Text="@context" OnClick="@(() => OnViewGenre(context))" />
                        </MudTd>
                    </RowTemplate>
                </WhipTable>
            </MudCardContent>
        </MudCard>
    </WhipRow>

</WhipColumn>
<WhipColumn md="9">

    @if (SelectedGenre != null)
    {
        <MudCard Class="fixed-height-margin"
                 Style="display: flex; flex-direction: column;">

            <MudCardHeader Class="pa-3">
                <GenreCardHeader Id="@SelectedGenre"
                                 OnView="@(() => OnViewSelectedGenre())" />
            </MudCardHeader>

            <MudCardContent Style="flex-grow: 1;"
                            Class="fixed-height-scroll pa-0">
                <WhipTable T="@Artist"
                           Items="@Artists">
                    <RowTemplate>
                        <MudTd>
                            <ActionLink Typo="@Typo.body1" Text="@context.Name" OnClick="@(() => OnViewArtist(context))" />
                        </MudTd>
                    </RowTemplate>
                </WhipTable>
            </MudCardContent>

        </MudCard>
    }

</WhipColumn>