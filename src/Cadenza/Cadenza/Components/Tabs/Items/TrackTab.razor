@inherits TrackTabBase

@if (Model != null)
{
    <WhipColumn md="4">
        <WhipRow RowHeight="@RowHeight.Fixed">
            <MudCard Class="ma-3">
                <MudCardHeader Class="pa-3">
                    <TrackCardHeader Model="@Model.Track"
                                 OnPlay="OnPlayTrack"
                                 TitleOnly="false"
                                 OnView="OnViewTrack" />
                </MudCardHeader>
                <MudCardContent Class="px-2 pt-0 pb-2">
                    <MudDivider Class="pa-0 ma-0 mb-2" />
                    <TrackTagsView Model="@Model.Track" />
                </MudCardContent>
            </MudCard>
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <MudCard Class="ma-3">
                <MudCardHeader Class="pa-3">
                    <ArtistCardHeader Model="@Model.Artist"
                                  OnPlay="OnPlayArtist"
                                  TitleOnly="false"
                                  OnView="OnViewArtist" />
                </MudCardHeader>
                <MudCardContent Class="px-2 pt-0 pb-2">
                    <MudDivider Class="pa-0 ma-0 mb-2" />
                    <ArtistLinksView Model="@Model.Artist" />
                </MudCardContent>
            </MudCard>
        </WhipRow>
    </WhipColumn>
    <WhipColumn md="4">
        <WhipRow RowHeight="@RowHeight.Fixed">
            <MudCard Class="ma-3">
                <MudCardHeader Class="pa-3">
                    <AlbumCardHeader Model="@Model.Album"
                                 OnPlay="OnPlayAlbum"
                                 TitleOnly="true"
                                 OnView="OnViewAlbum" />
                </MudCardHeader>
                <MudCardContent Class="pa-2">
                    <AlbumArtworkView Model="@Model.Album"
                                  OnPlay="OnPlayAlbum" />
                    <MudPaper Elevation="0"
                          Class="pa-0 mt-3 mb-1">
                        <MudText Typo="@Typo.body1">@Model.Album.ReleaseType.GetDisplayName()</MudText>
                        <MudText Typo="@Typo.body1">@Model.Album.Year</MudText>
                        <MudText Typo="@Typo.body1">@Model.Album.DiscPosition(Model.AlbumTrack.Position)</MudText>
                        <MudText Typo="@Typo.body1">@Model.Album.TrackPosition(Model.AlbumTrack.Position)</MudText>
                    </MudPaper>
                </MudCardContent>
            </MudCard>

        </WhipRow>
    </WhipColumn>
    <WhipColumn md="4">
        <WhipRow RowHeight="@RowHeight.Full">
            <MudCard Class="ma-3">
                <MudCardHeader Class="pa-3">
                    <LyricsCardHeader Id="@Model.Track.Id"
                                  Source="@Model.Track.Source" />
                </MudCardHeader>
                <MudCardContent Class="px-3 pt-0 pb-3">
                    <MudDivider Class="pa-0 ma-0 mb-3" />
                    <TrackLyricsView Model="@Model.Track" />
                </MudCardContent>
            </MudCard>

        </WhipRow>
    </WhipColumn>
}
