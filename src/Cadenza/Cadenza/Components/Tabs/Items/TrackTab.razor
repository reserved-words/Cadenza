@inherits TrackTabBase

@if (Model != null)
{
    <WhipColumn md="4">
        <WhipRow RowHeight="@RowHeight.Fixed">
            <TrackSummaryView Model="@Model.Track" />
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <ArtistView Model="@Model.Artist"
                    HeaderOnly="false" />
        </WhipRow>
        <WhipRow RowHeight="@RowHeight.Fixed">
            <TrackAlbumView Album="@Model.Album"
                        Position="@Model.AlbumTrack.Position" />
        </WhipRow>
    </WhipColumn>

    <WhipColumn md="4">
        <WhipRow RowHeight="@RowHeight.Fixed">
            <AlbumArtworkView Model="@Model.Album" />
        </WhipRow>
    </WhipColumn>

    <WhipColumn md="4">
        <WhipRow RowHeight="@RowHeight.Stretch">
            <TrackLyricsView Model="@Model.Track" />
        </WhipRow>
    </WhipColumn>

}