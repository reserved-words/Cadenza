@inherits CurrentlyPlayingTabBase

<WhipTab>
    @if (NotCurrentlyPlaying)
    {
        <WhipColumn md="12">
            <WhipRow RowHeight="@RowHeight.Full">
                <WhipCard>
                    <MudText Typo="@Typo.body1">Not currently playing</MudText>
                </WhipCard>
            </WhipRow>
        </WhipColumn>
    }
    else
    {
        <WhipColumn md="4">
            <WhipRow RowHeight="@RowHeight.Fixed">
                <TrackSummaryView Model="@Model.Track" />
            </WhipRow>
            <WhipRow RowHeight="@RowHeight.Fixed">
              <ArtistView Model="@Model.Artist"
                          HeaderOnly="false" />
            </WhipRow>
            <WhipRow RowHeight="@RowHeight.Fixed">
                <TrackAlbumView Album="@Model.Album"
                                Position="@Model.AlbumTrack.Position" />
            </WhipRow>
        </WhipColumn>

        <WhipColumn md="4">
            <WhipRow RowHeight="@RowHeight.Fixed">
                <AlbumArtworkView Model="@Model.Album" />
            </WhipRow>
        </WhipColumn>

        <WhipColumn md="4">
            <WhipRow RowHeight="@RowHeight.Stretch">
                <TrackLyricsView Model="@Model.Track" />
            </WhipRow>
        </WhipColumn>
    }

</WhipTab>
