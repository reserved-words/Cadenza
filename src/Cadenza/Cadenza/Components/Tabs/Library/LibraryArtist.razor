@inherits LibraryArtistBase

<MudCard Elevation="2"
         Class="fixed-height-margin"
         Style="display: flex; flex-direction: column;">

    <MudCardHeader Style="flex-grow: 0;" Class="pb-0 pt-3">
        <CardHeaderContent>
            <ArtistCardHeader Model="@Artist" />
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent Style="flex-grow: 1;" 
                    Class="fixed-height-scroll">
        @if (Releases != null)
        {
            <MudCard Class="pa-0">
                <ArtistReleaseGroupsView Model="@Releases"
                                         OnPlay="@OnPlayAlbum" />
            </MudCard>
        }
    </MudCardContent>
</MudCard>