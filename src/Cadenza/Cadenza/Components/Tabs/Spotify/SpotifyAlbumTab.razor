@inherits SpotifyAlbumTabBase

<WhipTab>
    <WhipColumn md="3">
        <WhipRow RowHeight="@RowHeight.Stretch">

            <MudCard Class="ma-3">
                <MudCardHeader Class="pa-3">
                    <MudText Typo="@Typo.h6">@Model.Album.Title</MudText>
                    <MudText Typo="@Typo.body1">@Model.Album.Artist</MudText>
                    <MudText Typo="@Typo.body1">@Model.Album.Year</MudText>
                </MudCardHeader>
                <MudCardContent Class="px-2 py-0">
                    <img class="artwork" src="@Model.Album.ArtworkUrl" />
                </MudCardContent>
            </MudCard>

        </WhipRow>
    </WhipColumn>
    <WhipColumn md="9">
        <WhipRow RowHeight="@RowHeight.Stretch">
            <MudCard>
                <WhipTable T="@SpotifyTrack"
                           Items="@Model.Tracks">
                    <RowTemplate>
                        <MudTd Style="width:1px; text-align: right;">@context.DiscNo</MudTd>
                        <MudTd Style="width:1px; text-align: right;">@context.TrackNo</MudTd>
                        <MudTd>@context.Title</MudTd>
                        <MudTd>@context.Artist</MudTd>
                        <MudTd Style="width:1px; text-align: right;">@context.Duration</MudTd>
                    </RowTemplate>
                </WhipTable>
            </MudCard>
        </WhipRow>
    </WhipColumn>
</WhipTab>