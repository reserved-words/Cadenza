<HistoryCard Title="Top Artists"
             Subtitle="Last week"
             IsLoading="@IsLoading"
             LoadingCaption="Loading top artists..."
             Items="@Model">
    <RowTemplate>
        <MudTd Style="width: 1px;">
            @context.Rank
        </MudTd>
        <MudTd>
            <MudText Typo="@Typo.body1">@context.Name</MudText>
            <MudText Typo="@Typo.body2">-</MudText>
        </MudTd>
        <MudTd Style="text-align: right; width: 1px;">
            @context.Plays
        </MudTd>
    </RowTemplate>
</HistoryCard>

@code {
    [Parameter]
    public List<PlayedArtist> Model { get; set; }

    [Parameter]
    public bool IsLoading { get; set; }
}