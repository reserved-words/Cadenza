<HistoryCard Title="Top Albums"
             Period="@HistoryPeriod.Week"
             IsLoading="@IsLoading"
             LoadingCaption="Loading top albums..."
             Items="@Model"
             GetItems="@GetItems">
    <RowTemplate>
        <MudTd Style="width: 1px;" Class="px-1 pt-1 pb-0">
            <img src="@context.ImageUrl" width="45" height="45"><img>
        </MudTd>
        <MudTd Style="width: 1px;">
            @context.Rank
        </MudTd>
        <MudTd>
            <MudText Typo="@Typo.body1">@context.Title</MudText>
            <MudText Typo="@Typo.body2">@context.Artist</MudText>
        </MudTd>
        <MudTd Style="text-align: right; width: 1px;">
            @context.Plays
        </MudTd>
    </RowTemplate>         
</HistoryCard>

@code {
    [Parameter]
    public List<PlayedAlbum> Model { get; set; }

    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public Func<HistoryPeriod, Task<List<PlayedAlbum>>> GetItems { get; set; }
}