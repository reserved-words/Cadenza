
<HistoryCard Title="Top Tracks"
             Subtitle="Last week"
             IsLoading="@IsLoading"
             LoadingCaption="Loading top tracks..."
             Items="@Model">
    <RowTemplate>
        <MudTd Style="width: 1px;">
            @context.Rank
        </MudTd>
        <MudTd>
            <MudText Typo="@Typo.body1">@context.Title</MudText>
            <MudText Typo="@Typo.body2">@context.Artist</MudText>
        </MudTd>
        <MudTd Style="text-align: right; width: 1px;">
            @context.Plays
        </MudTd>
    </RowTemplate>
</HistoryCard>

@code {
    [Parameter]
    public List<PlayedTrack> Model { get; set; }

    [Parameter]
    public bool IsLoading { get; set; }
}