@inherits SystemOverridesBase

<WhipSystemTable Items="@Items"
                 Filter="@FilterFunc"
                 Title="Data Overrides">
    <HeaderContent>
        <MudTh>Source</MudTh>
        <MudTh>Type</MudTh>
        <MudTh>Item</MudTh>
        <MudTh>Property</MudTh>
        <MudTh>Original Value</MudTh>
        <MudTh>Override Value</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            @context.Source
        </MudTd>
        <MudTd>
            @context.ItemType
        </MudTd>
        <MudTd>
            @context.Item
        </MudTd>
        <MudTd>
            @context.PropertyName
        </MudTd>
        <MudTd>
            @context.OriginalValue
        </MudTd>
        <MudTd>
            @context.OverrideValue
        </MudTd>
        <MudTd>
            <MudIconButton OnClick="@(() => Remove(context))"
                           Variant="Variant.Outlined"
                           Color="@Color.Default"
                           Icon="@Icons.Material.Filled.Delete"
                           Size="@Size.Small"></MudIconButton>

        </MudTd>
    </RowTemplate>
</WhipSystemTable>

