@if (Discs != null)
{
    <AppCardScrollContainer Elevation="0">
        <ChildContent>

            @if (Discs.Count == 1)
            {
                <AlbumDisc Model="@Discs.Single()" AlbumId="@Album.Id" AlbumArtistId="@Album.ArtistId" />
            }
            else
            {
                <MudTabs ActivePanelIndex="@ActivePanelIndex">
                    @foreach (var disc in Discs)
                    {
                        <MudTabPanel Text="@("Disc " + disc.DiscNo)">
                            <AlbumDisc Model="@disc" AlbumId="@Album.Id" AlbumArtistId="@Album.ArtistId" />
                        </MudTabPanel>
                    }
                </MudTabs>
            }

        </ChildContent>
    </AppCardScrollContainer>
}

@code {
    [Parameter]
    public AlbumInfo Album { get; set; } = new();

    [Parameter]
    public List<Disc> Discs { get; set; } = new();

    private int ActivePanelIndex { get; set; }

    protected override void OnParametersSet()
    {
        ActivePanelIndex = 0;
    }
}
