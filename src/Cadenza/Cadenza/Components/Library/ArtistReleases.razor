@if (Releases != null)
{
    <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
        <MudExpansionPanels Dense="true" DisableGutters="true" Square="true">
            @foreach (var group in Releases)
            {
                <MudExpansionPanel Text="@group.Group.GetDisplayName()" Class="text-bold panel-no-padding">
                    <ArtistReleaseGroupView Model="@group" />
                </MudExpansionPanel>
            }
        </MudExpansionPanels>
    </MudHidden>

    <MudHidden Breakpoint="Breakpoint.Xs">
        <MudTabs>
            @foreach (var group in Releases)
            {
                <MudTabPanel Text="@group.Group.GetDisplayName()">
                    <ArtistReleaseGroupView Model="@group" />
                </MudTabPanel>
            }
        </MudTabs>
    </MudHidden>
}

@code {
    [Parameter]
    public List<ArtistReleaseGroup> Releases { get; set; } = new();
}
