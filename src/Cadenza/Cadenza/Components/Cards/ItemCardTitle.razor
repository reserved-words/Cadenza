
<MudContainer Class="@ContainerClass" Style="align-items: center;">
    <MudIcon Icon="@ItemType.GetIcon()" Class="mr-2" />

    @if (Link)
    {
        <ItemLink Typo="@Typo" Type="@ItemType" Id="@Id" Name="@Name" />
    }
    else
    {
        <MudText Typo="@Typo">@Name</MudText>
    }
</MudContainer>

@code {
    [Inject] public IDispatcher Dispatcher { get; set; }

    [Parameter] public PlayerItemType ItemType { get; set; }
    [Parameter] public object Id { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public bool Link { get; set; } = true;
    [Parameter] public Typo Typo { get; set; } = Typo.h6;
    [Parameter] public int MarginBottom { get; set; } = 1;

    private string ContainerClass => $"d-flex flex-row pa-0 ma-0 mb-{MarginBottom}";
}
