
<MudCard Elevation="@Elevation" Square="@Square">

    <MudCardContent Class="ma-0 pa-2 pt-0">

        <AppContainer pa="2" pt="0">
            @ChildContent
        </AppContainer>

        @if (Tags != null)
        {
            <AppContainer pb="1">
                <TagsView Model="@Tags" />
            </AppContainer>
        }

    </MudCardContent>
</MudCard>


@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public IReadOnlyCollection<string> Tags { get; set; }
    [Parameter] public Breakpoint Breakpoint { get; set; }

    private int Elevation => Breakpoint == Breakpoint.Xs ? 0 : 3;

    private bool Square => Breakpoint == Breakpoint.Xs ? true : false;
}