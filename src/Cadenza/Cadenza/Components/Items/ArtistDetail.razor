@if (Artist != null)
{
    <ItemCard Type="@PlayerItemType.Artist" Heading="@Artist.Name" Tags="@null">
        <ChildContent>
            <MudText Typo="Typo.body1">@Artist.Location()</MudText>
            <GroupingLink Typo="@Typo.body2" Grouping="@Artist.Grouping" />
            <GenreLink Typo="@Typo.body2" Genre="@Artist.Genre" />
        </ChildContent>
    </ItemCard>
}

@code {
    [Parameter]
    public ArtistInfo Artist { get; set; } = new();
}
