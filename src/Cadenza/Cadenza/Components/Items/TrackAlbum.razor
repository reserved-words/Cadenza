@using Cadenza.Web.Common.Extensions
@using Cadenza.Common.Domain.Extensions


<ItemCard Type="@PlayerItemType.Album" Heading="Album" Tags="@null">
    <ChildContent>
        <MudGrid>
            <MudItem sm="6">
                <AlbumArtworkView Model="@Album" />
            </MudItem>
            <MudItem sm="6">
                <MudStack Spacing="0">
                    <AlbumLink Typo="@Typo.h6" Id="@Album.Id" Title="@Album.Title" />
                    <ArtistLink Typo="Typo.body1" Id="@Album.ArtistId" Name="@Album.ArtistName" />
                    <MudText Typo="@Typo.body1">@Album.ReleaseType.GetDisplayName()</MudText>
                    <MudText Typo="@Typo.body1">@Album.Year</MudText>
                    <MudText Typo="@Typo.body1">@Album.DiscPosition(AlbumTrack.Position)</MudText>
                    <MudText Typo="@Typo.body1">@Album.TrackPosition(AlbumTrack.Position)</MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </ChildContent>
</ItemCard>

@code {
    [Parameter]
    public AlbumInfo Album { get; set; } = new();

    [Parameter]
    public AlbumTrackLink AlbumTrack { get; set; } = new();
}
