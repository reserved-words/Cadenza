@if (Album != null)
{
    <ItemCard Type="@PlayerItemType.Album" Heading="@Album.Title" Tags="@null">
        <ChildContent>
            <ArtistLink Typo="Typo.body1" Id="@Album.ArtistId" Name="@Album.ArtistName" />
            <MudText Typo="Typo.body2">@Album.ReleaseType.GetDisplayName()</MudText>
            <MudText Typo="Typo.body2">@Album.Year</MudText>
        </ChildContent>
    </ItemCard>
}

@code {
    [Parameter]
    public AlbumInfo Album { get; set; } = new();

}
