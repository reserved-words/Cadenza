
@if (Album != null)
{
    <AppCard>
        <HeaderContent>
            <AlbumCardHeader Model="@Album"
                             TitleOnly="false"
                             TabHeading="true" />
        </HeaderContent>
        <ChildContent>
            <AlbumArtworkView Model="@Album" />
            <MudDivider Class="my-2" />
            <TagsView Model="@null" />
        </ChildContent>
    </AppCard>
}

@code {
    [Parameter]
    public AlbumInfo Album { get; set; } = new();

}
