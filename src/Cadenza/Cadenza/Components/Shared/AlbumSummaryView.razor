@if (Model != null)
{
    <MudContainer Class="d-flex pa-0 ma-0">
        <MudPaper Elevation="0" Class="flex-grow-1 pa-0 ma-0">
            <ActionLink Typo="Typo.body1" Text="@Model.Title" OnClick="@(() => OnView(Model))"></ActionLink>
            <MudText Typo="Typo.body2">@Model.ReleaseType.GetDisplayName()</MudText>
            <MudText Typo="Typo.body2">@Model.Year</MudText>
        </MudPaper>
            <MenuAlbum Class="mt-auto"
                       Id="@Model.Id"
                       Source="@Model.Source"
                       Size="@Size.Medium" />
    </MudContainer>
}

@code {
    [Parameter]
    public Album Model { get; set; }

    [Parameter]
    public Func<Album, Task> OnPlay { get; set; }

    [Parameter]
    public Func<Album, Task> OnView { get; set; }
}