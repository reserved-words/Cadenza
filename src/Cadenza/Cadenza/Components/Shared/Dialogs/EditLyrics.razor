@inherits EditLyricsBase

<WhipDialog Cancel="OnCancel"
            CancelCaption="Cancel"
            Submit="OnSubmit"
            SubmitCaption="OK">

    <ChildContent>
        <EditForm Model="@EditableItem">
            <DataAnnotationsValidator />
            <MudCard Class="pa-0">
                <MudCardContent Class="pa-1">
                    <MudTextField @bind-Value="EditableItem.Lyrics"
                                  For="@(() => EditableItem.Lyrics)"
                                  Lines="30" />
                </MudCardContent>
            </MudCard>
        </EditForm>
    </ChildContent>

</WhipDialog>