@inherits EditLyricsBase

<WhipDialog Cancel="OnCancel"
            CancelCaption="Cancel"
            Submit="OnSubmit"
            SubmitCaption="OK"
            Actions="@Actions">

    <ChildContent>
        <EditForm Model="@EditableItem">
            <DataAnnotationsValidator />

            <MudTextField Class="textarea"
                          @bind-Value="EditableItem.Lyrics"
                          For="@(() => EditableItem.Lyrics)"
                          Lines="30" />

        </EditForm>
    </ChildContent>

</WhipDialog>