@using Cadenza.Core.Extensions

<ItemCardHeader Type="@PlayerItemType.Grouping"
                Id="@Id.ToString()">
    <ChildContent>
        <ActionLink Typo="Typo.h6" Text="@Name" OnClick="@OnView"></ActionLink>
    </ChildContent>
</ItemCardHeader>


@code {
    [Parameter]
    public Grouping Id { get; set; }

    [Parameter]
    public Func<Task> OnView { get; set; }

    public string Name => Id.GetDisplayName();
}