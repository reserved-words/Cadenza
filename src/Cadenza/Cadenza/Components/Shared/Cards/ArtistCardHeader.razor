@using Cadenza.Core.App
@using Cadenza.Core.Extensions
@if (Model != null)
{
    <ItemCardHeader Type="@PlayerItemType.Artist"
                    Id="@Model.Id">
        <ChildContent>
            <ActionLink Typo="Typo.h6" Text="@Model.Name" OnClick="@(() => Viewer.ViewArtist(Model.Id))"></ActionLink>

            @if (!TitleOnly)
            {
                <MudText Typo="Typo.body1">@Model.Location()</MudText>
                <MudText Typo="Typo.body1">
                    <ActionLink Typo="Typo.body1" Text="@Model.Grouping.GetDisplayName()" OnClick="@(() => Viewer.ViewGrouping(Model.Grouping))"></ActionLink>
                    | 
                    <ActionLink Typo="Typo.body1" Text="@Model.Genre" OnClick="@(() => Viewer.ViewGenre(Model.Genre))"></ActionLink>
                </MudText>
            }

        </ChildContent>
    </ItemCardHeader>
}

@code {
    [Inject]
    public IItemViewer Viewer { get; set; }

    [Parameter]
    public ArtistInfo Model { get; set; }

    [Parameter]
    public bool TitleOnly { get; set; }
}