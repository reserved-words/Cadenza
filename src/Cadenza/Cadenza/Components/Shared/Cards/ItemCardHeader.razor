
<MudContainer Class="d-flex pa-0 ma-0">

    <MudPaper Elevation="0" Class="flex-grow-0 pa-0 ma-0 mr-2">
        <MudIcon Icon="@Type.GetIcon()"
                 Color="@Color.Dark"
                 Size="@Size.Large"
                 Class="ma-1" />
    </MudPaper>
    
    <MudPaper Elevation="0" Class="flex-grow-1 pa-0 ma-0">
        @ChildContent
    </MudPaper>
    
    <MudPaper Elevation="0" Class="flex-grow-0 pa-0 ma-0">
        
        @if (Type == PlayerItemType.Artist)
        {
            <MenuArtist Class="mt-auto"
                        ArtistId="@Id"
                        Size="@Size.Medium" />        
        }
        else if (Type == PlayerItemType.Album)
        {
            <MenuAlbum Class="mt-auto"
                       AlbumId="@Id"
                       Size="@Size.Medium" />
        }
        else if (Type == PlayerItemType.Track)
        {
            <MenuTrack Class="mt-auto"
                       TrackId="@Id"
                       Size="@Size.Large" />        
        }

    </MudPaper>
</MudContainer>

@code {
    [Parameter]
    public PlayerItemType Type { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public LibrarySource? Source { get; set; }

    [Parameter]
    public string Id { get; set; }

}