@if (Model != null)
{
    <ItemCardHeader Type="@SearchableItemType.Album"
                Id="@Model.Id"
                Source="@Model.Source">
        <ChildContent>
            <MudText Typo="Typo.h6">@Model.Title</MudText>
            <MudText Typo="Typo.body1">@Model.ArtistName</MudText>

            @if (!TitleOnly)
            {
                <MudText Typo="Typo.body1">@Model.ReleaseType.GetDisplayName()</MudText>
                <MudText Typo="Typo.body1">@Model.Year</MudText>
            }
        </ChildContent>
    </ItemCardHeader>
}

@code {
    [Parameter]
    public Album Model { get; set; }

    [Parameter]
    public Func<Album, Task> OnPlay { get; set; }

    [Parameter]
    public bool TitleOnly { get; set; }
}