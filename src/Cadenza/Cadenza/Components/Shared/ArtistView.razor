@inherits ArtistViewBase
@*
@if (HeaderOnly)
{
    <MudContainer Class="d-flex pa-0 ma-0">
        <MudPaper Elevation="0" Class="pa-0 ma-0 flex-grow-1 flex-shrink-0">
            <MudText Typo="Typo.h6">@Model.Name</MudText>
            <MudText Typo="Typo.body1">@Location</MudText>
            <MudText Typo="Typo.body1">@Model.Grouping | @Model.Genre</MudText>
        </MudPaper>
        <MudPaper Elevation="0" Class="pa-0 ma-0 flex-grow-0 flex-shrink-1 ml-auto" Style="display: flex; flex-direction: row; align-items: start;">
            <MudContainer Class="ma-0 px-2 py-0">
                <WhipLinks Links="@ArtistLinks" />
            </MudContainer>
            <MudDivider Vertical="true"
                        Class="my-0 ml-0 mr-2"/>
            <MenuArtist ArtistId="@Model.Id"
                        Style="margin-left: 3px; margin-top: 6px;"
                        Class="pa-0" />
        </MudPaper>
    </MudContainer>
}
else
{
    <WhipCard FooterLinks="@ArtistLinks">
        <MudContainer Class="d-flex pa-0 ma-0">
            <MudPaper Elevation="0" Class="flex-grow-1 flex-shrink-0 pa-0 ma-0">
                <MudText Typo="Typo.h6">@Model.Name</MudText>
                <MudText Typo="Typo.body1">@Location</MudText>
                <MudText Typo="Typo.body1">@Model.Grouping | @Model.Genre</MudText>
            </MudPaper>
            <MudPaper Elevation="0" Class="flex-grow-0 flex-shrink-1 pa-0 ma-0" Style="align-self: flex-start;">
                <MenuArtist Style="text-align: right; vertical-align: top;"
                            ArtistId="@Model.Id" />
            </MudPaper>
        </MudContainer>
        <MudDivider Class="mt-3" />
    </WhipCard>
}*@