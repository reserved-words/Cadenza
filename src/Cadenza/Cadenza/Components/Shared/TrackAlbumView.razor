<WhipCard>
    <MudContainer Class="d-flex pa-0 ma-0">
        <MudPaper Elevation="0" Class="flex-grow-1 flex-shrink-0 pa-0 ma-0">
            <MudText Typo="Typo.h6" >@Album.Title</MudText>
            <MudText Typo="Typo.body1">@Album.ArtistName</MudText>
        </MudPaper>
        <MudPaper Elevation="0" Class="flex-grow-0 flex-shrink-1 pa-0 ma-0" Style="align-self: flex-start;">
            <MenuAlbum Style="text-align: right; vertical-align: top;"
                       AlbumId="@Album.Id" />
        </MudPaper>
    </MudContainer>
    <MudDivider Class="my-3" />
    <MudContainer Class="d-flex pa-0 ma-0">
        <MudPaper Elevation="0" Class="flex-grow-1 flex-shrink-0 pa-0 ma-0">
            <MudText Typo="Typo.body1">@Album.ReleaseType</MudText>
            <MudText Typo="Typo.body1">@Album.Year</MudText>
            <MudText Typo="Typo.body1">@Album.DiscPosition(Position)</MudText>
            <MudText Typo="Typo.body1">@Album.TrackPosition(Position)</MudText>
        </MudPaper>
        <MudPaper Elevation="0" Class="flex-grow-0 flex-shrink-1 pa-0 ma-0" Style="align-self: flex-end;">
            <MudIcon Icon="@Album.Source.GetIcon()" 
                     Size="@Size.Large"
                     Style="text-align: right; vertical-align: bottom;" />
        </MudPaper>
    </MudContainer>
</WhipCard>

@code {
    [Parameter]
    public AlbumInfo Album { get; set; }

    [Parameter]
    public AlbumTrackPosition Position { get; set; }
}