@using Cadenza.Core.Model

@if (Model != null)
{
    if (Model.Count == 1)
    {
        <WhipCard Padding="false"
          Bordered="false">
            <AlbumDiscView Model="@Model.Single()" />
        </WhipCard>
    }
    else
    {
        <MudTabs>
            @foreach (var disc in Model)
            {
                <MudTabPanel Text="@("Disc " + disc.DiscNo)">
                    <AlbumDiscView Model="@disc" />
                </MudTabPanel>
            }
        </MudTabs>
    }
}

@code
{
    [Parameter]
    public List<Disc> Model { get; set; } = new();
}