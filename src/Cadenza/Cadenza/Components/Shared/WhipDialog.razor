
<MudDialog>
    <DialogContent>
        @ChildContent
    </DialogContent>
    <DialogActions>
        <MudPaper Class="d-flex justify-space-between flex-grow-1" Elevation="0">
            <MudPaper Elevation="0">
                @foreach (var action in Actions)
                {
                    <MudButton OnClick="@action.OnClick">@action.Caption</MudButton>
                }
            </MudPaper>
            <MudPaper Elevation="0">
                @if (ShowCancel)
                {
                    <MudButton OnClick="@Cancel">@CancelCaption</MudButton>
                }
                @if (ShowSubmit)
                {
                    <MudButton Color="Color.Primary" OnClick="@Submit">@SubmitCaption</MudButton>
                }
            </MudPaper>
        </MudPaper>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> Cancel { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> Submit { get; set; }

    [Parameter]
    public string CancelCaption { get; set; }

    [Parameter]
    public string SubmitCaption { get; set; }

    [Parameter]
    public List<DialogAction> Actions { get; set; } = new();

    public bool ShowCancel => CancelCaption != null;

    public bool ShowSubmit => SubmitCaption != null;
}