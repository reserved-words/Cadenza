@using Cadenza.Core.Model

@if (Model != null)
{
    <MudCard Elevation="2"
             Class="fixed-height-margin"
             Style="display: flex; flex-direction: column;">

        <MudCardContent Style="flex-grow: 1;"
                        Class="fixed-height-scroll pa-1">
            <MudTabs>
                @foreach (var group in Model)
                {
                    <ArtistReleaseGroupView Model="@group"
                                            OnPlay="@OnPlay" />
                }
            </MudTabs>
        </MudCardContent>
    </MudCard>
}

@code
{
    [Parameter]
    public List<ArtistReleaseGroup> Model { get; set; }

    [Parameter]
    public Func<Album, Task> OnPlay { get; set; }
}