@using Cadenza.Core.Model

@if (Model != null)
{
    <MudTabs Class="ma-0 pa-0"
             Elevation="0">
        @foreach (var releaseGroup in Model)
        {
            <MudTabPanel Text="@releaseGroup.Group.GetDisplayName()">
                <MudContainer Class="fixed-height-margin">
                        <ArtistReleaseGroupView Model="@releaseGroup"
                                                OnPlay="@OnPlay" />
                </MudContainer>
            </MudTabPanel>
        }
    </MudTabs>
}

@code
{
    [Parameter]
    public List<ArtistReleaseGroup> Model { get; set; }

    [Parameter]
    public Func<Album, Task> OnPlay { get; set; }
}