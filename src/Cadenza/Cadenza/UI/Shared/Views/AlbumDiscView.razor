@using Cadenza.Core.App
@using Cadenza.Core.Model

@if (Model != null)
{
    <AppTable T="@AlbumTrack"
           Items="@Model.Tracks">
        <RowTemplate>
            <MudTd Style="width:1px; text-align: right;">@context.Position.TrackNo</MudTd>
            <MudTd>
                <TrackLink Typo="@Typo.body1" Id="@context.TrackId" Title="@context.Title" />
            </MudTd>
            <MudTd>
                @if (context.ArtistId != AlbumArtistId)
                {
                    <ArtistLink Typo="@Typo.body1" Id="@context.ArtistId" Name="@context.ArtistName" />
                }
            </MudTd>
            <MudTd Style="width:1px; text-align: right;">@context.Duration()</MudTd>
        </RowTemplate>
    </AppTable>

}

@code {
    [Parameter]
    public Disc Model { get; set; }

    [Parameter]
    public string AlbumArtistId { get; set; }
}
