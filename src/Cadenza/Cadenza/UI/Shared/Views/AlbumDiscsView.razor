@using Cadenza.Core.Model

@if (Model != null)
{
    <MudCard Elevation="0"
             Class="fixed-height-margin"
             Style="display: flex; flex-direction: column;">

        <MudCardContent Style="flex-grow: 1;"
                        Class="fixed-height-scroll pa-1">
            <MudTabs>
                @if (Model.Count == 1)
                {
                    <MudTabPanel Text="Tracks">
                        <AlbumDiscView Model="@Model.Single()" AlbumArtistId="@AlbumArtistId" />
                    </MudTabPanel>
                }
                else
                {
                    @foreach (var disc in Model)
                    {
                        <MudTabPanel Text="@("Disc " + disc.DiscNo)">
                            <AlbumDiscView Model="@disc" AlbumArtistId="@AlbumArtistId" />
                        </MudTabPanel>
                    }
                }

            </MudTabs>

        </MudCardContent>
    </MudCard>
}


@code
{
    [Parameter]
    public string AlbumArtistId { get; set; }

    [Parameter]
    public List<Disc> Model { get; set; } = new();
}