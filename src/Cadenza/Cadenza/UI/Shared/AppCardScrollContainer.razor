
<MudCard Class="fixed-height-margin"
         Style="display: flex; flex-direction: column;">

    @if (HeaderContent != null)
    {
        <MudCardHeader Style="flex-grow: 0;" Class="pa-3">
            <CardHeaderContent>
                @HeaderContent
            </CardHeaderContent>
        </MudCardHeader>
    }

    <MudCardContent Style="flex-grow: 1;" Class="fixed-height-scroll pa-0 ma-0">
       @ChildContent
    </MudCardContent>

</MudCard>

@code {
    [Parameter]
    public int Elevation { get; set; } = 2;

    [Parameter]
    public RenderFragment HeaderContent { get; set; }
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
