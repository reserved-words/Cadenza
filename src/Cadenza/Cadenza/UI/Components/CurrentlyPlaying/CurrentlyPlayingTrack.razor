
<MudCard Class="ma-3">
    <MudCardHeader Class="pa-3">
        <TrackCardHeader Model="@Model"
                        TitleOnly="false"
                        OnView="OnViewTrack" />
    </MudCardHeader>
    <MudCardContent Class="px-2 pt-0 pb-2">
        <MudDivider Class="pa-0 ma-0 mb-2" />
        <TrackTagsView Model="@Model" />
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public TrackInfo Model { get; set; }

    [Parameter]
    public Func<Task> OnViewTrack { get; set; }
}
