@using Cadenza.Core.App
@using Cadenza.Core.Model

<AppTable Items="@Items">
    <RowTemplate>
        <MudTd Class="td-int">@context.TrackNo</MudTd>
        <MudTd>@context.Title</MudTd>
        <MudTd>@context.Artist</MudTd>
        <MudTd Class="td-int">@context.Duration.ToDurationDisplay()</MudTd>
    </RowTemplate>
</AppTable>

@code {
    [Parameter]
    public List<SpotifyTrack> Items { get; set; }
}
