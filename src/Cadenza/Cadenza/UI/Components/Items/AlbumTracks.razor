@using Cadenza.Web.Core.Model

@if (Discs != null)
{
    <AppCardScrollContainer Elevation="0">
        <ChildContent>
            <MudTabs>
                @if (Discs.Count == 1)
                {
                    <MudTabPanel Text="Tracks">
                        <AlbumDisc Model="@Discs.Single()" AlbumArtistId="@Album.ArtistId" />
                    </MudTabPanel>
                }
                else
                {
                    @foreach (var disc in Discs)
                    {
                        <MudTabPanel Text="@("Disc " + disc.DiscNo)">
                            <AlbumDisc Model="@disc" AlbumArtistId="@Album.ArtistId" />
                        </MudTabPanel>
                    }
                }
            </MudTabs>
        </ChildContent>
    </AppCardScrollContainer>
}

@code {
    [Parameter]
    public AlbumInfo Album { get; set; } = new();

    [Parameter]
    public List<Disc> Discs { get; set; } = new();
}
