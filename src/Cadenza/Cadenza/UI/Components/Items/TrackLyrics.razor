<MudCard Class="ma-3">
    <MudCardHeader Class="pa-3">
        <LyricsCardHeader Id="@Model.Id"
                        Source="@Model.Source" />
    </MudCardHeader>
    <MudCardContent Class="px-3 pt-0 pb-3">
        <MudDivider Class="pa-0 ma-0 mb-3" />
        <TrackLyricsView Model="@Model" />
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public TrackInfo Model { get; set; }
}
