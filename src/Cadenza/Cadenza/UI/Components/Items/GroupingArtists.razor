@using Cadenza.Core.App
@if (Genre != null)
{
    <MudCard Class="fixed-height-margin"
             Style="display: flex; flex-direction: column;">

        <MudCardHeader Class="pa-3">
            <GenreCardHeader Id="@Genre" />
        </MudCardHeader>

        <MudCardContent Style="flex-grow: 1;"
                        Class="fixed-height-scroll pa-0">
            <WhipTable T="@Artist"
                       Items="@Artists">
                <RowTemplate>
                    <MudTd>
                        <ArtistLink Typo="@Typo.body1" Id="@context.Id" Name="@context.Name" />
                    </MudTd>
                </RowTemplate>
            </WhipTable>
        </MudCardContent>

    </MudCard>
}

@code {
    [Parameter]
    public List<Artist> Artists { get; set; }

    [Parameter]
    public string Genre { get; set; }
}
