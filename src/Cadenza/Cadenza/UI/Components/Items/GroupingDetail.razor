
<MudCard Class="ma-3">
    <MudCardHeader Class="pa-3">
        <GroupingCardHeader Id="@Grouping" />
    </MudCardHeader>
    <MudCardContent Class="pa-0">
        <AppTable T="@string"
                   Items="@Genres">
            <RowTemplate>
                <MudTd>
                    <ActionLink Typo="@Typo.body1" Text="@context" OnClick="@(() => OnSelectGenre(context))" />
                </MudTd>
            </RowTemplate>
        </AppTable>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public List<string> Genres { get; set; }

    [Parameter]
    public Grouping Grouping { get; set; }

    [Parameter]
    public Func<string, Task> OnSelectGenre { get; set; }
}
