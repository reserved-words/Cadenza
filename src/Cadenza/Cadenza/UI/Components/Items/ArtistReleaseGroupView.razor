@using Cadenza.Core.Model

@if (Model != null)
{
    <MudTabPanel Text="@Model.Group.GetDisplayName()">
        <AppCardScrollContainer Elevation="0">
            <ChildContent>
                <AppGrid Items="@Model.Albums">
                    <ImageTemplate>
                         <AlbumArtworkView Model="@context" />
                    </ImageTemplate>
                    <CaptionTemplate>
                        <AlbumSummaryView Model="@context" />
                    </CaptionTemplate>
                </AppGrid>
            </ChildContent>
        </AppCardScrollContainer>
    </MudTabPanel>
}

@code {
    [Parameter]
    public ArtistReleaseGroup Model { get; set; }
}