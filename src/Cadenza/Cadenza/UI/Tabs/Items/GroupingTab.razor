@using Cadenza.Enums
@inherits GroupingTabBase

<TabGrid>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <GroupingDetail Genres="@Genres"
                            Grouping="@Grouping"
                            OnViewGenre="@OnViewGenre"
                            OnViewGrouping="@OnView" />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="9">
        <TabGridRow RowHeight="@RowHeight.Full">
            <GroupingArtists Artists="@Artists"
                             Genre="@SelectedGenre"
                             OnViewArtist="@OnViewArtist"
                             OnViewGenre="@OnViewSelectedGenre" />
        </TabGridRow>
    </TabGridColumn>

</TabGrid>
