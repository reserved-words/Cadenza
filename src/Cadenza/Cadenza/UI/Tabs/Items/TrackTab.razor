@using Cadenza.Core.Extensions
@using Cadenza.Enums
@inherits TrackTabBase

<TabGrid>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <TrackDetail Model="@Model.Track"
                         OnViewTrack="@OnViewTrack" />
        </TabGridRow>
        <TabGridRow RowHeight="@RowHeight.Fixed">
           <TrackArtist Model="@Model.Artist" />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <TrackAlbum Album="@Model.Album"
                        AlbumTrack="@Model.AlbumTrack"
                        OnViewAlbum="@OnViewAlbum"
                        OnPlayAlbum="@OnPlayAlbum" />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Full">
            <TrackLyrics Model="@Model.Track" />
        </TabGridRow>
    </TabGridColumn>
    
</TabGrid>
