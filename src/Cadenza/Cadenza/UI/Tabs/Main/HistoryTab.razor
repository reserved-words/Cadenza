@inherits HistoryTabBase

<TabGrid>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Full">
            <HistoryRecent />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="8">
        <TabGridRow RowHeight="@RowHeight.Fixed">

            <SubGrid>
                <SubGridColumn md="6">
                    <SubGridRow RowHeight="@RowHeight.Fixed">
                        <HistoryArtists Model="@TopArtists"
                                        IsLoading="@IsLoading"
                                        GetItems="@GetArtists" />
                    </SubGridRow>
                </SubGridColumn>
                <SubGridColumn md="6">
                    <SubGridRow RowHeight="@RowHeight.Fixed">
                        <HistoryTracks Model="@TopTracks"
                                       IsLoading="@IsLoading"
                                       GetItems="@GetTracks" />
                                   </SubGridRow>
                </SubGridColumn>
            </SubGrid>

        </TabGridRow>
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <HistoryAlbums Model="@TopAlbums"
                           IsLoading="@IsLoading"
                           GetItems="@GetAlbums" />
        </TabGridRow>
    </TabGridColumn>

</TabGrid>
