@inherits HistoryTabBase

<TabGrid>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Full">
            <HistoryRecent />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="8">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <HistoryArtistsTracks IsLoading="@IsLoading"
                                  Artists="@TopArtists"
                                  Tracks="@TopTracks"
                                  GetArtists="@GetArtists"
                                  GetTracks="@GetTracks" />
        </TabGridRow>
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <HistoryAlbums Model="@TopAlbums"
                           IsLoading="@IsLoading"
                           GetItems="@GetAlbums"/>
        </TabGridRow>
    </TabGridColumn>

</TabGrid>
