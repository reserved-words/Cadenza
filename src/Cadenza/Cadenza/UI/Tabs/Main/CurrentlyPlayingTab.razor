@inherits CurrentlyPlayingTabBase

<TabGrid>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <CurrentlyPlayingTrack Model="@Model.Track"
                                    OnViewTrack="@OnViewTrack" />
        </TabGridRow>
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <CurrentlyPlayingArtist Model="@Model.Artist" />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <CurrentlyPlayingAlbum Album="@Model.Album"
                                   AlbumTrack="@Model.AlbumTrack"
                                   OnViewAlbum="@OnViewAlbum"
                                   OnPlayAlbum="@OnPlayAlbum" />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Full">
            <CurrentlyPlayingLyrics Model="@Model.Track" />
        </TabGridRow>
    </TabGridColumn>

</TabGrid>
