@inherits TabsLayoutBase

<MudTabs KeepPanelsAlive="true" Class="main-tabs" @ref="tabs">

    <MudTabPanel ID="@(Tab.Dashboard)">
        <DashboardTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.CurrentTrack)">
        <CurrentlyPlayingTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.Library)">
        <LibraryTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.Search)">
        <SearchTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.Settings)">
        <SettingsTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.Edit)">
        <EditTab />
    </MudTabPanel>

</MudTabs>