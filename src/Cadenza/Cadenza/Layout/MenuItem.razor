
@if (ShowLabel)
{
    <MudButton StartIcon="@Icon" OnClick="@OnClick" Class="@Class" Size="@IconSize">@Label</MudButton>
}
else
{
    <MudIconButton Icon="@Icon" OnClick="@OnClick" Class="@Class"></MudIconButton>
}


@code {

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public Size IconSize { get; set; }

    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public bool ShowLabel { get; set; }

    [Parameter]
    public Tab Tab { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public Func<Tab, Task> OnClickItem { get; set; }

    private async Task OnClick()
    {
        await OnClickItem(Tab);
    }
}
