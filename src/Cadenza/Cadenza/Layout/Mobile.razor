@inherits TabsLayoutBase

<MudTabs KeepPanelsAlive="true" Class="main-tabs" @ref="tabs">

    <MudTabPanel ID="@(Tab.Home)">
        <HomeTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.RecentTracks)">
        <RecentTracksTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.RecentAlbums)">
        <RecentAlbumsTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.Charts)">
        <ChartsTab />
    </MudTabPanel>
    <MudTabPanel ID="@(Tab.Library)">
        <LibraryTab />
    </MudTabPanel>

</MudTabs>