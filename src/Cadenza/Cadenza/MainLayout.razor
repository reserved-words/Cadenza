@using Cadenza.Web.Components.Layout

@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
    @Body
</MudHidden>

<MudHidden Breakpoint="Breakpoint.Sm" Invert="true">
    <MudLayout>
        <MudAppBar Color="Color.Dark" Fixed="true" DisableGutters="true" Dense="true">
            <MainMenu />
        </MudAppBar>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>
</MudHidden>

<MudHidden Breakpoint="Breakpoint.SmAndDown">
    <MudLayout>
        <MudAppBar Elevation="1" DisableGutters="@true">
            <MainMenu />
        </MudAppBar>
        <MudDrawer Open="@true" Elevation="2" Class="ma-0 pa-0 flex flex-column">
            <Sidebar />
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>
</MudHidden>