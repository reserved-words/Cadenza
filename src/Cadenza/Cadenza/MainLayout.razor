@using Cadenza.Layout

@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
    <MudLayout>
        <MudCard Style="height: 100%; display: flex; flex-direction: column;">
            <MudCardContent Class="fixed-height-scroll pa-0" Style="flex-grow: 1;">
                @Body
            </MudCardContent>
            <MudDivider />
            <MudCardActions Class="d-flex align-start pa-1">
                <MobileMenu />
            </MudCardActions>
        </MudCard>
    </MudLayout>
</MudHidden>

<MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
    <MudLayout>
        <MudAppBar Elevation="1" DisableGutters="@true">
            <DesktopMenu />
        </MudAppBar>
        <MudDrawer Open="true" Elevation="2" Class="ma-0 pa-0 flex flex-column">
            <DesktopSidebar />
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>
</MudHidden>