@inherits CurrentlyPlayingTabBase

<TabGrid>

    @if (Model != null)
    {
        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <PlayingTrack Model="@Model.Track" />
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <PlayingArtist Model="@Model.Artist" />
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <PlayingAlbum Album="@Model.Album"
                              AlbumTrack="@Model.AlbumTrack" />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <PlayingArtwork Album="@Model.Album" />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Full">
                <PlayingLyrics Model="@Model.Track" />
            </TabGridRow>
        </TabGridColumn>
    }

</TabGrid>
