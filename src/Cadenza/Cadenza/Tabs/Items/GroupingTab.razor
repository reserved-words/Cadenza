
@inherits GroupingTabBase

<TabGrid>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <GroupingDetail Genres="@Genres"
                            Grouping="@Grouping"
                            OnSelectGenre="@OnSelectGenre" />
        </TabGridRow>

        <MudSpacer />

        <MudDivider />

        <MudPaper Elevation="25" Class="ma-0 px-3">
            <MudToolBar Dense="true" DisableGutters="true">
                <MudButton StartIcon="@Icons.Material.Filled.PlayArrow">Play</MudButton>
                <MudSpacer />
                <MudButton StartIcon="@Icons.Material.Filled.Edit">Edit</MudButton>
            </MudToolBar>
        </MudPaper>

    </TabGridColumn>

    <TabGridColumn md="9">
        <TabGridRow RowHeight="@RowHeight.Full">
            <GroupingArtists Artists="@Artists"
                             Genre="@SelectedGenre" />
        </TabGridRow>
    </TabGridColumn>

</TabGrid>
