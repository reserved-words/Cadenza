
@inherits TrackTabBase

<TabGrid>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <TrackDetail Model="@Model.Track" TabHeading="true" />
        </TabGridRow>
        <TabGridRow RowHeight="@RowHeight.Fixed">
           <TrackArtist Model="@Model.Artist" />
        </TabGridRow>

        <MudSpacer />

        <MudDivider />

        <TrackToolbar Track="@Model.Track" />

    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <TrackAlbum Album="@Model.Album"
                        AlbumTrack="@Model.AlbumTrack" />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Full">
            <TrackLyrics Model="@Model.Track" />
        </TabGridRow>
    </TabGridColumn>
    
</TabGrid>
