
@inherits TrackTabBase

<TabGrid>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <TrackDetail Model="@Model.Track" TabHeading="true" />
        </TabGridRow>
        <TabGridRow RowHeight="@RowHeight.Fixed">
           <TrackArtist Model="@Model.Artist" />
        </TabGridRow>

        <MudSpacer />

        <MudDivider />

        <MudPaper Elevation="25" Class="ma-0 px-3">
            <MudToolBar Dense="true" DisableGutters="true">
                <MudButton StartIcon="@Icons.Material.Filled.PlayArrow">Play Track</MudButton>
                <MudSpacer />
                <MudButton StartIcon="@Icons.Material.Filled.Edit">Edit Track</MudButton>
                <MudButton StartIcon="@Icons.Material.Filled.Edit">Edit Lyrics</MudButton>
            </MudToolBar>
        </MudPaper>

    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <TrackAlbum Album="@Model.Album"
                        AlbumTrack="@Model.AlbumTrack" />
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="4">
        <TabGridRow RowHeight="@RowHeight.Full">
            <TrackLyrics Model="@Model.Track" />
        </TabGridRow>
    </TabGridColumn>
    
</TabGrid>
