
@if (Item.Type == PlayerItemType.Album)
{
    <AlbumTab Id="@int.Parse(Item.Id)" />
}
else if (Item.Type == PlayerItemType.Artist)
{
    <ArtistTab Id="@int.Parse(Item.Id)" />
}
else if (Item.Type == PlayerItemType.Genre)
{
    <GenreTab Id="@Item.Id" />
}
else if (Item.Type == PlayerItemType.Grouping)
{
    <GroupingTab Id="@Item.Id" />
}
else if (Item.Type == PlayerItemType.Tag)
{
    <TagTab Id="@Item.Id" />
}
else if (Item.Type == PlayerItemType.Track)
{
    <TrackTab Id="@int.Parse(Item.Id)" />
}

@code {
    [Parameter]
    public ViewItem Item { get; set; }
}
