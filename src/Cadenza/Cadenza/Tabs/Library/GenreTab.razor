@inherits GenreTabBase

<TabGrid>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <GenreDetail Id="@Id">
                <Toolbar>
                    <GenreToolbar Genre="@Id" />
                </Toolbar>
            </GenreDetail>
        </TabGridRow>

    </TabGridColumn>

    <TabGridColumn md="9">
        <TabGridRow RowHeight="@RowHeight.Full">
            <GenreArtists Artists="@Artists" />
        </TabGridRow>
    </TabGridColumn>

</TabGrid>