@inherits GenreTabBase

<TabGrid>

    <TabGridColumn sm="4" md="3">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <GenreDetail Id="@Genre">
                <Toolbar>
                    <GenreToolbar Genre="@Genre" />
                </Toolbar>
            </GenreDetail>
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn sm="8" md="9">
        <TabGridRow RowHeight="@RowHeight.Full">

            <MudDivider Class="xs-only" />
            <GenreArtists Artists="@Artists" />

        </TabGridRow>
    </TabGridColumn>

</TabGrid>