<TabGrid>

    <TabGridColumn sm="6" md="8">
        <TabGridRow RowHeight="@RowHeight.Fixed">

            <SubGrid>

                <SubGridColumn sm="12" md="6">

                    <SubGridRow RowHeight="@RowHeight.Fixed">

                        <TrackDetail Model="@Model.Track"
                                     Breakpoint="@Breakpoint">
                            <Toolbar>
                                <TrackToolbar Track="@Model.Track" />
                            </Toolbar>
                        </TrackDetail>
                    
                    </SubGridRow>
                    
                    <SubGridRow RowHeight="@RowHeight.Fixed">

                        <MudDivider Class="xs-only" />
                        <TrackArtist Model="@Model.Artist"
                                     Breakpoint="@Breakpoint" />

                    </SubGridRow>

                </SubGridColumn>

                <SubGridColumn sm="12" md="6">
                    <SubGridRow RowHeight="@RowHeight.Fixed">

                        <MudDivider Class="xs-only" />
                        <TrackAlbum Model="@Model.Album"
                                    AlbumTrack="@Model.AlbumTrack"
                                    Breakpoint="@Breakpoint" />

                    </SubGridRow>
                </SubGridColumn>

            </SubGrid>

        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn sm="6" md="4">
        <TabGridRow RowHeight="@RowHeight.Full">

            @if (!string.IsNullOrWhiteSpace(Model.Track.Lyrics))
            {
                <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                    <MudDivider />
                    <MudExpansionPanels Dense="true" DisableGutters="true" Square="true">
                        <MudExpansionPanel Class="text-bold panel-no-padding" Text="Lyrics">
                            <TrackLyrics Model="@Model.Track"
                                         Breakpoint="@Breakpoint" />
                        </MudExpansionPanel>
                    </MudExpansionPanels>
                </MudHidden>
            }

            <MudHidden Breakpoint="Breakpoint.Xs">
                <TrackLyrics Model="@Model.Track"
                             Breakpoint="@Breakpoint" />
            </MudHidden>
        </TabGridRow>
    </TabGridColumn>

</TabGrid>

@code {
    [Parameter]
    public TrackFull Model { get; set; }

    [Parameter]
    public Breakpoint Breakpoint { get; set; }

    private bool ShowAlbumHeader => Breakpoint == Breakpoint.MdAndUp;

    private bool ShowArtistHeader => Breakpoint == Breakpoint.MdAndUp;
}