@inherits AlbumTabBase

<TabGrid>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <AlbumDetail Model="@Album" />
        </TabGridRow>

        <MudDivider />

        <AlbumToolbar Album="@Album" />

    </TabGridColumn>

    <TabGridColumn md="9">
        <TabGridRow RowHeight="@RowHeight.Full">
            <AlbumTracks Album="@Album"
                         Discs="@Discs" />
        </TabGridRow>

    </TabGridColumn>

</TabGrid>