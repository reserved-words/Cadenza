@inherits TrackTabBase

<TabGrid>

    <TabGridColumn sm="6" md="8">
        <TabGridRow RowHeight="@RowHeight.Fixed">

            <SubGrid>
                <SubGridColumn sm="12" md="6">
                    <SubGridRow RowHeight="@RowHeight.Fixed">
                        <TrackDetail Model="@Model.Track">
                            <Toolbar>
                                <TrackToolbar Track="@Model.Track" />
                            </Toolbar>
                        </TrackDetail>
                    </SubGridRow>
                    <SubGridRow RowHeight="@RowHeight.Fixed">
                        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
                            <TrackArtist Model="@Model.Artist"
                                         ShowHeader="false" />
                        </MudHidden>
                        <MudHidden Breakpoint="Breakpoint.SmAndDown">
                            <TrackArtist Model="@Model.Artist"
                                         ShowHeader="true" />
                        </MudHidden>
                    </SubGridRow>
                </SubGridColumn>

                <SubGridColumn sm="12" md="6">
                    <SubGridRow RowHeight="@RowHeight.Fixed">
                        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
                            <TrackAlbum Model="@Model.Album"
                                        AlbumTrack="@Model.AlbumTrack"
                                        ShowHeader="false" />
                        </MudHidden>
                        <MudHidden Breakpoint="Breakpoint.SmAndDown">
                            <TrackAlbum Model="@Model.Album"
                                        AlbumTrack="@Model.AlbumTrack"
                                        ShowHeader="true" />
                        </MudHidden>
                    </SubGridRow>
                </SubGridColumn>
            </SubGrid>

        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn sm="6" md="4">
        <TabGridRow RowHeight="@RowHeight.Full">
            <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                <MudExpansionPanels>
                    <MudExpansionPanel Class="text-bold panel-no-padding" Text="Lyrics">
                        <TrackLyrics Model="@Model.Track"
                                     DisplayAsCard="false" />
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.Xs">
                <TrackLyrics Model="@Model.Track"
                             DisplayAsCard="true" />
            </MudHidden>
        </TabGridRow>
    </TabGridColumn>

</TabGrid>
