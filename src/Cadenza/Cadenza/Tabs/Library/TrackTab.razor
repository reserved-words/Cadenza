@inherits TrackTabBase

<TabGrid>

    <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
        <TabGridColumn md="3">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TrackDetail Model="@Model.Track" Album="@Model.Album">
                    <Toolbar>
                        <TrackToolbar Track="@Model.Track" />
                    </Toolbar>
                </TrackDetail>
            </TabGridRow>
        </TabGridColumn>
        <TabGridColumn>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <MudExpansionPanels>
                    <MudExpansionPanel Text="Artist" Class="text-bold panel-no-padding">
                        <TrackArtist Model="@Model.Artist"
                                     DisplayAsCard="false" />
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="Album" Class="text-bold panel-no-padding">
                        <TrackAlbum Model="@Model.Album"
                                    AlbumTrack="@Model.AlbumTrack"
                                    DisplayAsCard="false" />
                    </MudExpansionPanel>

                    @if (!string.IsNullOrWhiteSpace(Model.Track.Lyrics))
                    {
                        <MudExpansionPanel Text="Lyrics" Class="text-bold panel-no-padding">
                            <TrackLyrics Model="@Model.Track"
                                     DisplayAsCard="false" />
                        </MudExpansionPanel>
                    }

                </MudExpansionPanels>

            </TabGridRow>
        </TabGridColumn>
    </MudHidden>


    <MudHidden Breakpoint="Breakpoint.Sm" Invert="true">

        <TabGridColumn sm="5">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TrackDetail Model="@Model.Track" Album="@Model.Album">
                    <Toolbar>
                        <TrackToolbar Track="@Model.Track" />
                    </Toolbar>
                </TrackDetail>
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TrackArtist Model="@Model.Artist" DisplayAsCard="true" />
            </TabGridRow>
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TrackAlbum Model="@Model.Album"
                            AlbumTrack="@Model.AlbumTrack"
                            DisplayAsCard="true" />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn sm="7">
            <TabGridRow RowHeight="@RowHeight.Full">
                <TrackLyrics Model="@Model.Track"
                             DisplayAsCard="true" />
            </TabGridRow>
        </TabGridColumn>
    </MudHidden>


    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">

        <TabGridColumn sm="5" md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TrackDetail Model="@Model.Track" Album="@Model.Album">
                    <Toolbar>
                        <TrackToolbar Track="@Model.Track" />
                    </Toolbar>
                </TrackDetail>
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn sm="7" md="4">
            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TrackArtist Model="@Model.Artist"
                             DisplayAsCard="true" />
            </TabGridRow>

            <TabGridRow RowHeight="@RowHeight.Fixed">
                <TrackAlbum Model="@Model.Album"
                            AlbumTrack="@Model.AlbumTrack"
                            DisplayAsCard="true" />
            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn sm="12" md="4">
            <TabGridRow RowHeight="@RowHeight.Full">
                <TrackLyrics Model="@Model.Track"
                             DisplayAsCard="true" />
            </TabGridRow>
        </TabGridColumn>
    </MudHidden>

</TabGrid>
