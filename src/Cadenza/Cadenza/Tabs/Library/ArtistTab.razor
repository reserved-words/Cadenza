@inherits ArtistTabBase

<TabGrid>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <ArtistDetail Model="@Artist">
                <Toolbar>
                    <ArtistToolbar Artist="@Artist" />
                </Toolbar>
            </ArtistDetail>
        </TabGridRow>

    </TabGridColumn>

    <TabGridColumn md="9">
        <TabGridRow RowHeight="@RowHeight.Full">
            <ArtistReleases Releases="@Releases" />
        </TabGridRow>
    </TabGridColumn>

</TabGrid>