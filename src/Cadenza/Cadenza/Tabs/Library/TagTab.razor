@inherits TagTabBase

@if (!Loading)
{
    <TabGrid>

        <TabGridColumn md="3">
            <TabGridRow RowHeight="@RowHeight.Fixed">

                <ItemCard Type="@PlayerItemType.Tag" Heading="@Tag" Tags="@null">
                    <ChildContent>
                        <MudSelect Label="Filter by type"
                        @bind-Value="FilterType"
                                   For="@(() => FilterType)"
                                   T="@string">
                            @foreach (var type in FilterTypes.Keys)
                            {
                                <MudSelectItem Value="@type">@type</MudSelectItem>
                            }
                        </MudSelect>
                    </ChildContent>
                    <Toolbar>
                        <TagToolbar Tag="@Tag" />
                    </Toolbar>
                </ItemCard>

            </TabGridRow>

        </TabGridColumn>

        <TabGridColumn md="9">
            <TabGridRow RowHeight="@RowHeight.Full">
                <AppCardScrollContainer>
                    <ChildContent>
                        <TagResultTable Items="@Items" OnViewItem="@OnViewItem" OnFilter="OnFilter" />
                    </ChildContent>
                </AppCardScrollContainer>
            </TabGridRow>
        </TabGridColumn>

    </TabGrid>
}