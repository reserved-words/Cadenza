@inherits TagTabBase

<TabGrid>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Fixed">
            <TagDetail Id="@Id" />
        </TabGridRow>

        <MudDivider />

        <TagToolbar Tag="@Id" />

    </TabGridColumn>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Full">
            <AppCardScrollContainer>
                <HeaderContent>
                    <MudText Typo="Typo.h6">Artists</MudText>
                </HeaderContent>
                <ChildContent>
                    <AppTable T="@PlayerItem"
                              Items="@Artists">
                        <RowTemplate>
                            <MudTd>
                                <ArtistLink Typo="@Typo.body1" Id="@context.Id" Name="@context.Name" />
                            </MudTd>
                        </RowTemplate>
                    </AppTable>
                </ChildContent>
            </AppCardScrollContainer>
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Full">
            <AppCardScrollContainer>
                <HeaderContent>
                    <MudText Typo="Typo.h6">Albums</MudText>
                </HeaderContent>
                <ChildContent>
                    <AppTable T="@PlayerItem"
                              Items="@Albums">
                        <RowTemplate>
                            <MudTd>
                                <AlbumLink Typo="@Typo.body1" Id="@context.Id" Title="@context.Name" />
                            </MudTd>
                        </RowTemplate>
                    </AppTable>
                </ChildContent>
            </AppCardScrollContainer>
        </TabGridRow>
    </TabGridColumn>

    <TabGridColumn md="3">
        <TabGridRow RowHeight="@RowHeight.Full">
            <AppCardScrollContainer>
                <HeaderContent>
                    <MudText Typo="Typo.h6">Tracks</MudText>
                </HeaderContent>
                <ChildContent>
                    <AppTable T="@PlayerItem"
                              Items="@Tracks">
                        <RowTemplate>
                            <MudTd>
                                <TrackLink Typo="@Typo.body1" Id="@context.Id" Title="@context.Name" />
                            </MudTd>
                        </RowTemplate>
                    </AppTable>
                </ChildContent>
            </AppCardScrollContainer>

        </TabGridRow>
    </TabGridColumn>

</TabGrid>