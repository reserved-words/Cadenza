@inherits FluxorComponent

@using Cadenza.Features.Tabs.CurrentlyPlaying.Components

<TabGrid>

    @if (Model != null)
    {
        <TabGridColumn md="8">
            <TabGridRow RowHeight="@RowHeight.Fixed">

                <SubGrid>

                    <SubGridColumn md="6">

                        <SubGridRow RowHeight="@RowHeight.Fixed">
                            <PlayingTrack Model="@Model.Track" />
                        </SubGridRow>

                        <SubGridRow RowHeight="@RowHeight.Fixed">
                            <PlayingArtist Model="@Model.Artist" />
                        </SubGridRow>

                    </SubGridColumn>

                    <SubGridColumn md="6">

                        <SubGridRow RowHeight="@RowHeight.Fixed">
                            <PlayingAlbum Model="@Model.Album"
                                          AlbumTrack="@Model.AlbumTrack" />
                        </SubGridRow>

                    </SubGridColumn>

                </SubGrid>

            </TabGridRow>
        </TabGridColumn>

        <TabGridColumn md="4">
            <TabGridRow RowHeight="@RowHeight.Full">
                <PlayingLyrics Model="@Model.Track" />
            </TabGridRow>
        </TabGridColumn>
    }

</TabGrid>
