@inherits EditAlbumArtworkBase

@if (Model != null)
{
    <MudContainer Class="pa-0 mt-3 d-flex flex-column align-center">
        @if (Model.ArtworkBase64 != null)
        {
            <img class="image-Artwork edit-image" src="@Model.ArtworkBase64" />
        }
        else
        {
            <img class="image-Artwork edit-image" src="@OriginalArtworkSrc" />
        }

        <MudStack Row="true" Class="my-2">
            <MudButton OnClick="@OnLoad">Load</MudButton>
            <MudButton OnClick="@OnSearch">Search</MudButton>
        </MudStack>

    </MudContainer>

    <MudStack Row="true" Class="my-1">
        <MudTextField MaxLength="255"
                      Label="Artwork URL"
                      @bind-Value="ArtworkUrl"
                      For="@(() => ArtworkUrl)" />

        <MudButton Variant="@Variant.Outlined"
                   OnClick="@OnUpdateUrl">Update</MudButton>
    </MudStack>
}