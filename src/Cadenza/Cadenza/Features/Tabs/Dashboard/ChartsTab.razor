@using Cadenza.Features.Tabs.Dashboard.Components

<TabGrid>

    <TabGridColumn>
        <TabGridRow RowHeight="@RowHeight.Stretch">

            <AppCardScrollContainer>
                <HeaderContent>
                    <MudText Typo="@Typo.h6">Charts</MudText>
                </HeaderContent>

                <ChildContent>

                    <MudTabs Centered="true">
                        <MudTabPanel Text="Artists">
                            <AppContainer pa="0" pt="3">
                                <TopArtists />
                            </AppContainer>
                        </MudTabPanel>
                        <MudTabPanel Text="Albums">
                            <AppContainer pa="0" pt="3">
                                <TopAlbums />
                            </AppContainer>
                        </MudTabPanel>
                    </MudTabs>

                </ChildContent>
            </AppCardScrollContainer>

        </TabGridRow>
    </TabGridColumn>

</TabGrid>