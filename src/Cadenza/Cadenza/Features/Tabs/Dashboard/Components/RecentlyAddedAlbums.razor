@using Cadenza.Features.Tabs.Dashboard

@inherits RecentlyAddedAlbumsBase

<DashboardCard Title="@(ShowHeader ? "Recently Added Albums" : null)"
               IsLoading="@IsLoading"
               LoadingCaption="Loading recently added albums..."
               ShowPeriodOption="false">

    <MudGrid Spacing="1" Justify="Justify.FlexStart">
        @foreach (var album in RecentAlbums)
        {
            <MudItem xs="4" sm="3">
                <RecentAlbumView Model="@album" />
            </MudItem>
        }
    </MudGrid>

</DashboardCard>