@using Cadenza.Features.Tabs.Dashboard

@inherits RecentlyPlayedAlbumsBase

<DashboardCard Title="@(ShowHeader ? "Recently Played Albums" : null)"
               IsLoading="@IsLoading"
               LoadingCaption="Loading recently played albums..."
               ShowPeriodOption="false">

    <MudGrid Spacing="1" Justify="Justify.FlexStart">
        @foreach (var album in RecentAlbums)
        {
            <MudItem xs="4" sm="3">
                <RecentAlbumView Model="@album" />
            </MudItem>
        }
    </MudGrid>

</DashboardCard>