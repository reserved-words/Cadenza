

<MudContainer Class="d-flex flex-row pa-0 ma-0" Style="align-items: center;">

    <MudPaper Elevation="0" Class="flex-grow-1 pa-0 ma-0 d-flex flex-column">
        <MudText Typo="@Typo.h6">@Title</MudText>
        @if (ShowPeriodOption)
        {
            <MudText Typo="@Typo.body1">@Period.GetDisplayName()</MudText>
        }
    </MudPaper>

    <MudPaper Elevation="0" Class="flex-grow-0 pa-0 ma-0">
        @if (ShowPeriodOption)
        {
            <MudMenu Icon="@Icon.Settings"
                     Class="mt-auto"
                     Size="@Size.Medium"
                     AnchorOrigin="@Origin.TopLeft"
                     TransformOrigin="@Origin.BottomRight">
                @foreach (var period in Enum.GetValues<HistoryPeriod>())
                {
                    <MudMenuItem OnClick="@(() => OnUpdate(period))">@period.GetDisplayName()</MudMenuItem>
                }
            </MudMenu>
        }
    </MudPaper>

</MudContainer>

@code {
    [Parameter] public HistoryPeriod Period { get; set; }

    [Parameter] public string Title { get; set; }

    [Parameter] public bool ShowPeriodOption { get; set; } = true;

    [Parameter] public Action<HistoryPeriod> OnUpdate { get; set; }
}
