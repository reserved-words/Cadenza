@using Cadenza.Features.Tabs.Dashboard

@inherits TopAlbumsBase

<DashboardCard Title="Top Albums"
               IsLoading="@IsLoading"
               LoadingCaption="Loading top albums..."
               Period="@Period"
               UpdateItems="@UpdateItems">
    <AppTable Items="@Items">
        <RowTemplate>
            <MudTd Class="td-img">
                <img src="@context.ImageUrl" width="45" height="45"><img>
            </MudTd>
            <MudTd Class="td-int">
                @context.Rank
            </MudTd>
            <MudTd>
                @if (context.Plays > 0)
                {
                    <ItemLink Typo="@Typo.body1" Type="@PlayerItemType.Album" Id="@context.Id" Name="@context.Title" />
                }
                else
                {
                    <MudText Typo="@Typo.body1">@context.Title</MudText>
                }
                <MudText Typo="@Typo.body2">@context.Artist</MudText>
            </MudTd>
            <MudTd Class="td-int">
                @context.Plays
            </MudTd>
        </RowTemplate>
    </AppTable>
</DashboardCard>
