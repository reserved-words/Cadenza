@using Cadenza.Features.Tabs.Dashboard.Components

<TabGrid>

    <TabGridColumn>
        <TabGridRow RowHeight="@RowHeight.Stretch">

            <AppCardScrollContainer>
                <HeaderContent>
                    <MudText Typo="@Typo.h6">Recent Albums</MudText>
                </HeaderContent>

                <ChildContent>

                    <MudTabs Centered="true">
                        <MudTabPanel Text="Recently Played">
                            <AppContainer pt="3">
                                <RecentlyPlayedAlbums ShowHeader="false" />
                            </AppContainer>
                        </MudTabPanel>
                        <MudTabPanel Text="Recently Added">
                            <AppContainer pt="3">
                                <RecentlyAddedAlbums ShowHeader="false" />
                            </AppContainer>
                        </MudTabPanel>
                    </MudTabs>

                </ChildContent>
            </AppCardScrollContainer>

        </TabGridRow>
    </TabGridColumn>

</TabGrid>