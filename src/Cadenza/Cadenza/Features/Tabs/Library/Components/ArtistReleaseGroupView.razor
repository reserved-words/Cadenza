
<MudHidden Breakpoint="@Breakpoint.Xs" Invert="true">
    <AppScrollContainer Elevation="0" Padding="0">
        <AppTable Items="@Model.Albums">
            <RowTemplate>
                <MudTd Style="max-width: 50px;">
                    <AlbumArtworkView Model="@context" />
                </MudTd>
                <MudTd>
                    <AlbumSummaryView Model="@context" />
                </MudTd>
            </RowTemplate>
        </AppTable>
    </AppScrollContainer>
</MudHidden>

<MudHidden Breakpoint="@Breakpoint.Xs">
    <AppScrollContainer Elevation="0">
        <AppGrid Items="@Model.Albums">
            <ImageTemplate>
                <AlbumArtworkView Model="@context" />
            </ImageTemplate>
            <CaptionTemplate>
                <AlbumSummaryView Model="@context" />
            </CaptionTemplate>
        </AppGrid>
    </AppScrollContainer>
</MudHidden>

@code {
    [Parameter] public ArtistReleaseGroupVM Model { get; set; }
}