@inherits LyricsViewBase

<AppCardScrollContainer Elevation="@Elevation">
    <HeaderContent>
        @if (Breakpoint != Breakpoint.Xs)
        {
            <LyricsCardHeader />
        }
    </HeaderContent>
    <ChildContent>
        <MudContainer Class="ma-0 pt-0 pb-3 px-3">
            <MudText Typo="@Typo.body1">
                @Lyrics
            </MudText>
        </MudContainer>
    </ChildContent>
</AppCardScrollContainer>

@code {
    [Parameter] public Breakpoint Breakpoint { get; set; }

    private int Elevation => Breakpoint == Breakpoint.Xs ? 0 : 3;

    private bool ShowHeader => Breakpoint != Breakpoint.Xs;
}
