
<AppCardScrollContainer HeaderPaddingTop="4" HeaderPaddingBottom="0">
    <HeaderContent>
        <ItemCardTitle ItemType="@PlayerItemType.Genre" Name="@Genre" Link="false" Typo="@Typo.h5" mb="3" />
    </HeaderContent>
    <ChildContent>
        <AppTable T="@ArtistVM"
                  Items="@Artists">
            <RowTemplate>
                <MudTd>
                    <ItemLink Typo="@Typo.body1" Type="@PlayerItemType.Artist" Id="@context.Id" Name="@context.Name" />
                </MudTd>
            </RowTemplate>
        </AppTable>
    </ChildContent>
</AppCardScrollContainer>

@code {
    [Parameter] public string Genre { get; set; }
    [Parameter] public string Grouping { get; set; }
    [Parameter] public IReadOnlyCollection<ArtistVM> Artists { get; set; }
}
