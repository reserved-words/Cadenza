@inherits ArtistViewBase

@if (Model != null)
{
    <ItemCard Tags="@Model.Tags">

        <ItemCardTitle ItemType="@PlayerItemType.Artist" Id="@Model.Id" Name="@Model.Name" Link="false" Typo="@Typo.h5" mb="3" />
        <ArtistImageView Model="@Model" />
        <MudText Typo="Typo.body1">@Model.Location()</MudText>
        <ItemLink Typo="@Typo.body2" Type="@PlayerItemType.Grouping" Id="@Model.Grouping" Name="@Model.Grouping" />
        <ItemLink Typo="@Typo.body2" Type="@PlayerItemType.Genre" Id="@Model.Genre" Name="@Model.Genre.GetGenreName()" />
    </ItemCard>
}