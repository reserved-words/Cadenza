@inherits PlayerControlsBase

<MudButtonGroup Variant="Variant.Filled" Class="ma-0 pa-0">
    <MudIconButton Icon="@Icon.SkipPrevious" OnClick="SkipPrevious" Disabled="@(!CanSkipPrevious)" Class="player-control" />
    <MudIconButton Icon="@Icon.Play" OnClick="Resume" Disabled="@(!CanPlay)" Class="@PlayButtonClass()" />
    <MudIconButton Icon="@Icon.Pause" OnClick="Pause" Disabled="@(!CanPause)" Class="@PauseButtonClass()" />
    <MudIconButton Icon="@Icon.SkipNext" OnClick="SkipNext" Disabled="@(!CanSkipNext)" Class="player-control" />
</MudButtonGroup>

@code {
    private string PlayButtonClass()
    {
        return Display(!CanPause);
    }

    private string PauseButtonClass()
    {
        return Display(CanPause);
    }

    private string Display(bool show) => "player-control " + (show ? "d-flex" : "d-none");
}