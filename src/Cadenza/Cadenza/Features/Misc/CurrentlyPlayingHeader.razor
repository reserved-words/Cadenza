@inherits FluxorComponent

<AppContainer>
    <MudText Typo="Typo.h6">Currently Playing</MudText>

    <MudStack Row="true" Spacing="2" Style="white-space: nowrap; overflow-x: hidden;">
        @if (PlaylistTypeIcon != null)
        {
            <MudIcon Icon="@PlaylistTypeIcon" Size="@Size.Small" />
        }
        @if (ShowViewLink)
        {
            <ItemLink Typo="@Typo.body1" Type="@ItemType.Value" Id="@Id" Name="@PlaylistName" />
        }
        else
        {
            <MudText Typo="Typo.body1" title="@PlaylistName">@PlaylistName</MudText>
        }
    </MudStack>
    <MudDivider Class="my-1" />
</AppContainer>